<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x350"
    android:background="@drawable/dialog_add_hand"
    android:orientation="vertical">

    <EditText
        android:id="@+id/dialog_search_add_hand_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/x20"
        android:background="@drawable/shape_1ccd9b_10"
        android:hint="对方真实姓名"
        android:singleLine="true"
        android:padding="@dimen/x10"
        android:textColor="@color/color_0"
        android:textColorHint="@color/color_d8" />

    <EditText
        android:id="@+id/dialog_search_add_hand_tel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/x20"
        android:background="@drawable/shape_1ccd9b_10"
        android:hint="对方手机号"
        android:inputType="number"
        android:singleLine="true"
        android:padding="@dimen/x10"
        android:textColor="@color/color_0"
        android:textColorHint="@color/color_d8" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x80"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_search_add_hand_negative"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/x10"
            android:layout_marginLeft="@dimen/x10"
            android:layout_weight="1"
            android:background="@drawable/shape_1ccd9b_10_soild"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/color_f"
            android:textSize="@dimen/y30" />

        <View
            android:layout_width="@dimen/x10"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/dialog_search_add_hand_positive"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:layout_weight="1"
            android:background="@drawable/shape_1ccd9b_10_soild"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/color_f"
            android:textSize="@dimen/y30" />
    </LinearLayout>
</LinearLayout>