<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/layout_empty"
        layout="@layout/layout_empty" />

    <RadioGroup
        android:id="@+id/fragment_contact_rg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x96"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/fragment_contact_recent"
            style="@style/contact_top_style"
            android:text="最近联系" />

        <RadioButton
            android:id="@+id/fragment_contact_people_list"
            style="@style/contact_top_style"
            android:checked="true"
            android:text="通讯录" />

        <RadioButton
            android:id="@+id/fragment_contact_group"
            style="@style/contact_top_style"
            android:text="我的分组" />
    </RadioGroup>

    <LinearLayout
        android:id="@+id/fragment_contact_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" />
</LinearLayout>