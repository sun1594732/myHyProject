<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x150"
    android:layout_gravity=""
    android:background="@color/color_f"
    android:orientation="horizontal">

    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/x150"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="@dimen/x420"
            android:layout_height="@dimen/x60"
            android:layout_marginTop="@dimen/x30"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_record_lv_totalTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingRight="@dimen/x14"
                android:layout_toLeftOf="@+id/item_record_lv_audio"
                android:text="20s"
                android:layout_centerVertical="true"
                android:textColor="@color/color_6"
                android:textSize="@dimen/y26" />

            <RelativeLayout
                android:id="@+id/item_record_lv_audio"
                android:layout_width="@dimen/x200"
                android:layout_height="match_parent"
                android:background="@mipmap/a1"
                android:layout_toLeftOf="@+id/img1">

                <com.hyzs.onekeyhelp.widget.GIFview
                    android:id="@+id/item_record_lv_gif"
                    android:layout_width="@dimen/x18"
                    android:layout_height="@dimen/x18"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <ImageView
                android:id="@+id/img1"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@mipmap/a3" />
        </RelativeLayout>


        <TextView
            android:id="@+id/item_record_lv_time"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="right"
            android:layout_marginBottom="@dimen/x14"
            android:layout_marginEnd="@dimen/x14"
            android:layout_marginRight="@dimen/x14"
            android:layout_weight="1"
            android:gravity="bottom"
            android:text="2017-5-5  16:49"
            android:textColor="@color/color_6"
            android:textSize="@dimen/y26" />
    </LinearLayout>

    <com.hyzs.onekeyhelp.widget.RoundImageView
        android:id="@+id/item_record_lv_icon"
        android:layout_width="@dimen/x100"
        android:layout_height="@dimen/x100"
        android:scaleType="centerCrop"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:src="@mipmap/icon_replace" />
</LinearLayout>