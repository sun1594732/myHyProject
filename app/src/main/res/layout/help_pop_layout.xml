<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFFFF"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/x500"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_add_hand"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/help_pop_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/x20"
            android:src="@mipmap/jingshibiao" />

        <TextView
            android:id="@+id/help_pop_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/x30"
            android:text="GPS定位 . 语音信息成功发送"
            android:textColor="@color/color_f7221b"
            android:textSize="@dimen/y30" />

        <TextView
            android:id="@+id/help_pop_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/x20"
            android:layout_marginTop="@dimen/x20"
            android:text="客服会尽快与您联系"
            android:textColor="@color/color_4"
            android:textSize="@dimen/y30" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="@color/color_1ccd9b" />

        <TextView
            android:id="@+id/help_pop_confirm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x70"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/color_4"
            android:textSize="@dimen/y30"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>