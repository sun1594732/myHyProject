<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_mine_service_comment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f"
    android:orientation="horizontal">

    <com.hyzs.onekeyhelp.widget.RoundImageView
        android:id="@+id/item_mine_service_comment_icon"
        android:layout_width="@dimen/x100"
        android:layout_height="@dimen/x100"
        android:layout_marginBottom="@dimen/x30"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginTop="@dimen/x30"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_replace" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:layout_marginTop="@dimen/x25"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_mine_service_comment_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="白富美"
                android:textColor="@color/color_3"
                android:textSize="@dimen/y30" />

            <TextView
                android:id="@+id/item_mine_service_comment_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x30"
                android:text="12-24 20:00"
                android:textColor="@color/color_9"
                android:textSize="@dimen/y26" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_mine_service_comment_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x20"
            android:layout_marginTop="@dimen/x30"
            android:lineSpacingMultiplier="1.2"
            android:text="测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据测试数据"
            android:textColor="@color/color_6"
            android:textSize="@dimen/y26" />
    </LinearLayout>

</LinearLayout>