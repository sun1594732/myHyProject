<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item_family_record_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_f"
        android:orientation="horizontal">

        <com.hyzs.onekeyhelp.widget.RoundImageView
            android:id="@+id/item_family_record_left_icon"
            android:layout_width="@dimen/x100"
            android:layout_height="@dimen/x100"
            android:layout_margin="@dimen/x30"
            android:src="@mipmap/icon_replace" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/item_family_record_left_voice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x30"
                android:src="@mipmap/liaotianzuo" />

            <TextView
                android:id="@+id/item_family_record_left_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x10"
                android:text="2017-4-1 16:00"
                android:textColor="@color/color_9"
                android:textSize="@dimen/y26" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_family_record_left_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginTop="@dimen/x45"
            android:text="20s"
            android:textColor="@color/color_9"
            android:textSize="@dimen/y26" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_family_record_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_f"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/item_family_record_right_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginTop="@dimen/x45"
            android:layout_weight="1"
            android:gravity="right"
            android:text="20s"
            android:textColor="@color/color_9"
            android:textSize="@dimen/y26" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/item_family_record_right_voice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x30"
                android:src="@mipmap/liaotianyou" />

            <TextView
                android:id="@+id/item_family_record_right_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/x10"
                android:layout_marginTop="@dimen/x10"
                android:text="2017-4-1 16:00"
                android:textColor="@color/color_9"
                android:textSize="@dimen/y26" />
        </LinearLayout>


        <com.hyzs.onekeyhelp.widget.RoundImageView
            android:id="@+id/item_family_record_right_icon"
            android:layout_width="@dimen/x100"
            android:layout_height="@dimen/x100"
            android:layout_margin="@dimen/x30"
            android:src="@mipmap/icon_replace" />
    </LinearLayout>

</LinearLayout>