<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/activity_company_add"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f"
        android:orientation="vertical">

        <include layout="@layout/toolbar" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x90"
            android:orientation="horizontal">

            <View
                android:layout_width="@dimen/x5"
                android:layout_height="@dimen/x40"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x30"
                android:background="@color/color_1ccd9b" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x10"
                android:gravity="center_vertical"
                android:text="机构信息"
                android:textColor="@color/color_3"
                android:textSize="@dimen/y34" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="@color/color_d" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x90"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x26"
                android:gravity="center_vertical"
                android:text="机构名称"
                android:textColor="@color/color_6"
                android:textSize="@dimen/y30" />

            <EditText
                android:id="@+id/activity_company_add_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x30"
                android:background="@null"
                android:maxLength="20"
                android:hint="请输入机构真实名称"
                android:textColor="@color/color_6"
                android:textColorHint="@color/color_9"
                android:textSize="@dimen/y30" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="@color/color_d" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x26"
                android:layout_marginTop="@dimen/x30"
                android:gravity="center_vertical"
                android:text="上传LOGO"
                android:textColor="@color/color_6"
                android:textSize="@dimen/y30" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/x26"
                    android:layout_marginTop="@dimen/x30"
                    android:gravity="center_vertical"
                    android:text="请上传机构 LOGO"
                    android:textColor="@color/color_9"
                    android:textSize="@dimen/y26" />

                <ImageView
                    android:id="@+id/activity_company_add_nonePic1"
                    android:layout_width="@dimen/x118"
                    android:layout_height="@dimen/x118"
                    android:layout_marginBottom="@dimen/x10"
                    android:layout_marginLeft="@dimen/x30"
                    android:layout_marginRight="@dimen/x30"
                    android:layout_marginTop="@dimen/x10"
                    android:scaleType="centerCrop"
                    android:background="@drawable/stoken_photo"
                    android:src="@mipmap/default_photo" />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x90"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x26"
                android:gravity="center_vertical"
                android:text="营业执照"
                android:textColor="@color/color_6"
                android:textSize="@dimen/y30" />

            <EditText
                android:id="@+id/activity_company_add_number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x30"
                android:background="@null"
                android:maxLength="20"
                android:hint="请输入有效工商执照号码"
                android:textColor="@color/color_6"
                android:textColorHint="@color/color_9"
                android:textSize="@dimen/y30" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="@color/color_d" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x90"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x26"
                android:gravity="center_vertical"
                android:text="成立日期"
                android:textColor="@color/color_6"
                android:textSize="@dimen/y30" />

            <TextView
                android:id="@+id/activity_company_add_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x30"
                android:text="请选择日期"
                android:textColor="@color/color_3"
                android:textSize="@dimen/y30" />

            <ImageView
                android:layout_width="@dimen/x16"
                android:layout_height="@dimen/x14"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x10"
                android:src="@mipmap/sanjiao" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="@color/color_d" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x90"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x26"
                android:gravity="center_vertical"
                android:text="服务区域"
                android:textColor="@color/color_6"
                android:textSize="@dimen/y30" />

            <EditText
                android:id="@+id/activity_company_add_position"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x30"
                android:background="@null"
                android:hint="请简要输入服务区域"
                android:textColor="@color/color_6"
                android:textColorHint="@color/color_9"
                android:textSize="@dimen/y30" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="@color/color_d" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x90"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x26"
                android:gravity="center_vertical"
                android:text="电话号码"
                android:textColor="@color/color_6"
                android:textSize="@dimen/y30" />

            <EditText
                android:id="@+id/activity_company_add_tel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x30"
                android:background="@null"
                android:inputType="number"
                android:maxLength="11"
                android:hint="请输入电话号码"
                android:textColor="@color/color_6"
                android:textColorHint="@color/color_9"
                android:textSize="@dimen/y30" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="@color/color_d" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x90"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x26"
                android:gravity="center_vertical"
                android:text="所在位置"
                android:textColor="@color/color_6"
                android:textSize="@dimen/y30" />

            <TextView
                android:id="@+id/activity_company_add_mapLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x30"
                android:text="请选择位置"
                android:textColor="@color/color_3"
                android:textSize="@dimen/y30" />

            <ImageView
                android:layout_width="@dimen/x16"
                android:layout_height="@dimen/x14"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x10"
                android:src="@mipmap/sanjiao" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="@color/color_d" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x90"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x26"
                android:gravity="center_vertical"
                android:text="机构地址"
                android:textColor="@color/color_6"
                android:textSize="@dimen/y30" />

            <EditText
                android:id="@+id/activity_company_add_location"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x30"
                android:background="@null"
                android:hint="请输入详细地址"
                android:textColor="@color/color_6"
                android:textColorHint="@color/color_9"
                android:textSize="@dimen/y30" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="@color/color_d" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/x90"
                android:layout_marginLeft="@dimen/x26"
                android:gravity="center_vertical"
                android:text="服务项目"
                android:textColor="@color/color_6"
                android:textSize="@dimen/y30" />

            <com.hyzs.onekeyhelp.widget.GridViewForScrollView
                android:id="@+id/activity_company_add_grid"
                android:layout_width="0dp"
                android:layout_height="@dimen/x300"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginTop="@dimen/x30"
                android:layout_weight="1"
                android:numColumns="2"
                android:layout_marginBottom="@dimen/x30"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="@color/color_d" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x26"
                android:layout_marginTop="@dimen/x30"
                android:gravity="center_vertical"
                android:text="上传照片"
                android:textColor="@color/color_6"
                android:textSize="@dimen/y30" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/x26"
                    android:layout_marginTop="@dimen/x30"
                    android:gravity="center_vertical"
                    android:text="请上传机构营业执照，荣誉证书，店铺环境等照片"
                    android:textColor="@color/color_9"
                    android:textSize="@dimen/y26" />

                <ImageView
                    android:id="@+id/activity_company_add_nonePic"
                    android:layout_width="@dimen/x118"
                    android:layout_height="@dimen/x118"
                    android:layout_marginBottom="@dimen/x10"
                    android:layout_marginLeft="@dimen/x30"
                    android:layout_marginRight="@dimen/x30"
                    android:layout_marginTop="@dimen/x10"
                    android:background="@drawable/stoken_photo"
                    android:src="@mipmap/default_photo" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/activity_company_add_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="@color/color_d" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x90"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x26"
                android:gravity="center_vertical"
                android:text="文字介绍"
                android:textColor="@color/color_6"
                android:textSize="@dimen/y30" />

            <EditText
                android:id="@+id/activity_company_add_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x30"
                android:background="@null"
                android:hint="请输入机构介绍，500字以内"
                android:textColor="@color/color_6"
                android:textColorHint="@color/color_9"
                android:textSize="@dimen/y30" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="@color/color_d" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/activity_company_add_submit"
            android:layout_width="@dimen/x280"
            android:layout_height="@dimen/x60"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/x20"
            android:layout_marginTop="@dimen/x30"
            android:background="@drawable/shape_1ccd9b_6_soild"
            android:gravity="center"
            android:text="完成"
            android:textColor="@color/color_f"
            android:textSize="@dimen/y34" />
    </LinearLayout>
</ScrollView>
