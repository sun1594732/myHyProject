<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_manager"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x180"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/activity_manager_applyType"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x30"
            android:drawableLeft="@mipmap/jiaru"
            android:drawablePadding="@dimen/x36"
            android:gravity="center_vertical"
            android:text="机构申请加入"
            android:textColor="@color/color_3"
            android:textSize="@dimen/y34" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/x1"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/activity_manager_applyStatus"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/x30"
            android:gravity="center_vertical"
            android:text="待审核"
            android:textColor="@color/color_6"
            android:textSize="@dimen/y30" />

        <TextView
            android:id="@+id/activity_manager_apply"
            android:layout_width="@dimen/x122"
            android:layout_height="@dimen/x60"
            android:layout_marginRight="@dimen/x30"
            android:background="@drawable/fc5a65_6"
            android:gravity="center"
            android:text="加入"
            android:textColor="@color/color_f"
            android:textSize="@dimen/y30" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/color_d" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x180"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x30"
            android:drawableLeft="@mipmap/manager_fuwu"
            android:drawablePadding="@dimen/x36"
            android:gravity="center_vertical"
            android:text="服务项目管理"
            android:textColor="@color/color_3"
            android:textSize="@dimen/y34" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/x1"
            android:layout_weight="1" />


        <TextView
            android:id="@+id/activity_manager_add"
            android:layout_width="@dimen/x122"
            android:layout_height="@dimen/x60"
            android:layout_marginRight="@dimen/x30"
            android:background="@drawable/f9764a_6"
            android:gravity="center"
            android:text="增加"
            android:textColor="@color/color_f"
            android:textSize="@dimen/y30" />
    </LinearLayout>

    <com.hyzs.onekeyhelp.widget.ListViewForScrollView
        android:id="@+id/activity_manager_applySPList"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/color_d" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x180"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x30"
            android:drawableLeft="@mipmap/ab"
            android:drawablePadding="@dimen/x36"
            android:gravity="center_vertical"
            android:text="客户关系管理"
            android:textColor="@color/color_3"
            android:textSize="@dimen/y34" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/x1"
            android:layout_weight="1" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/color_d" />
</LinearLayout>
