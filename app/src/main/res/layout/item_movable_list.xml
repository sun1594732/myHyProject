<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_f"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.hyzs.onekeyhelp.widget.RoundImageView
                android:id="@+id/item_movable_avatar"
                android:layout_width="@dimen/x80"
                android:layout_height="@dimen/x80"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginTop="@dimen/x30"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_replace" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/item_movable_notification"
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:layout_marginLeft="-10px"
                android:layout_marginTop="@dimen/x20"
                android:src="@color/color_ef1111"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x20"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/item_movable_publisher_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x28"
                        android:text="发布人"
                        android:textColor="@color/color_6"
                        android:textSize="@dimen/y26"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/item_movable_publisher_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x32"
                        android:src="@mipmap/juweihui" />

                    <ImageView
                        android:id="@+id/item_movable_ding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x10"
                        android:layout_marginTop="@dimen/x30"
                        android:src="@mipmap/zhid" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/item_movable_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x28"
                        android:text="报名进行中"
                        android:textColor="@color/color_dd4337"
                        android:textSize="@dimen/y26"
                        android:visibility="invisible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x20"
                    android:layout_marginTop="@dimen/x8"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/item_movable_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="白富美"
                        android:textColor="@color/color_4"
                        android:textSize="@dimen/y30" />

                    <ImageView
                        android:id="@+id/item_movable_list_identity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x10"
                        android:src="@mipmap/identity"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/item_contact_list_markContainer_zheng"
                        android:layout_width="@dimen/x30"
                        android:layout_height="@dimen/x30"
                        android:layout_marginLeft="@dimen/x10"
                        android:background="@drawable/shape_f81302_zheng"
                        android:paddingBottom="@dimen/x2"
                        android:paddingLeft="@dimen/x6"
                        android:paddingRight="@dimen/x6"
                        android:paddingTop="@dimen/x2"
                        android:text="证"
                        android:textColor="@color/color_f"
                        android:textSize="@dimen/y20"
                        android:visibility="gone" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/item_movable_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="报名人数(50)"
                        android:textColor="@color/color_6"
                        android:textSize="@dimen/x26" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x2"
            android:layout_marginBottom="@dimen/x8"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginTop="@dimen/x8"
            android:background="@color/color_f4" />

        <TextView
            android:id="@+id/item_movable_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x30"
            android:ellipsize="end"
            android:lineSpacingExtra="@dimen/x5"
            android:maxLines="1"
            android:text="寻好朋友组团爬长城！！！寻好朋友组团爬长城！！！寻好朋友组团爬长城！！！"
            android:textColor="@color/color_4"
            android:textSize="@dimen/y30" />

        <TextView
            android:id="@+id/item_movable_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginTop="@dimen/x14"
            android:text="时间：2017-3-31"
            android:textColor="@color/color_6"
            android:textSize="@dimen/y26" />


        <TextView
            android:id="@+id/item_movable_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x15"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginTop="@dimen/x14"
            android:text="地点：八达岭长城"
            android:textColor="@color/color_6"
            android:textSize="@dimen/y26" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.hyzs.onekeyhelp.widget.RoundImageView
            android:id="@+id/item_movable_icon"
            android:layout_width="@dimen/x160"
            android:layout_height="@dimen/x160"
            android:layout_marginBottom="@dimen/x20"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x30"
            android:layout_marginTop="@dimen/x20"
            android:scaleType="centerCrop"
            android:src="@mipmap/replace_hybb" />

        <TextView
            android:id="@+id/item_movable_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="@dimen/x20"
            android:layout_marginRight="@dimen/x30"
            android:layout_marginTop="@dimen/x10"
            android:background="@drawable/shape_d"
            android:paddingBottom="@dimen/x5"
            android:paddingLeft="@dimen/x10"
            android:paddingRight="@dimen/x10"
            android:paddingTop="@dimen/x5"
            android:text="删除"
            android:textColor="@color/color_3"
            android:textSize="@dimen/y26" />
    </LinearLayout>
</LinearLayout>