<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_f"
    android:orientation="vertical">


        <TextView
            android:padding="@dimen/x40"
            android:id="@+id/layout_dialog_signOff_title"
            android:button="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/x10"
            android:background="@drawable/dialog_life_help_group"
            android:gravity="center"
            android:text="邻居"
            android:textSize="@dimen/y34"
            android:textColor="@color/color_6" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/color_d8" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/x10"
        android:orientation="horizontal">

        <TextView
            android:padding="@dimen/x20"
            android:id="@+id/layout_dialog_signOff_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/color_6" />

        <View
            android:layout_width="@dimen/x1"
            android:layout_height="match_parent"
            android:background="@color/color_d8" />

        <TextView
            android:padding="@dimen/x20"
            android:id="@+id/layout_dialog_signOff_sure"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/color_6" />
    </LinearLayout>
</LinearLayout>