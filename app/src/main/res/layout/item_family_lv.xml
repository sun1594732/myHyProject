<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_family_lv"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x180"
    android:background="@color/color_f"
    android:orientation="horizontal">

    <View
        android:layout_width="@dimen/x1"
        android:layout_height="@dimen/x150" />

    <com.hyzs.onekeyhelp.widget.RoundImageView
        android:id="@+id/item_family_lv_icon"
        android:scaleType="centerCrop"
        android:layout_width="@dimen/x120"
        android:layout_height="@dimen/x120"
        android:layout_margin="@dimen/x30"
        android:src="@mipmap/icon_replace" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_family_lv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x24"
            android:text="至亲至爱的一家人"
            android:textColor="@color/color_3"
            android:textSize="@dimen/y34" />

        <TextView
            android:id="@+id/item_family_lv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x5"
            android:text="家庭的说明情况"
            android:textColor="@color/color_3"
            android:textSize="@dimen/y28" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_family_lv_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x5"
                android:layout_weight="1"
                android:textColor="@color/color_3"
                android:textSize="@dimen/y28" />

            <TextView
                android:id="@+id/item_family_lv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x30"
                android:layout_marginTop="@dimen/x8"
                android:text="2017-4-11"
                android:textColor="@color/color_3"
                android:textSize="@dimen/y28" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/item_family_lv_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/x30"
        android:src="@mipmap/talk" />
</LinearLayout>