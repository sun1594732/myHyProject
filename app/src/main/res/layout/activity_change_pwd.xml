    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:layout_marginLeft="@dimen/x49"
        android:layout_marginRight="@dimen/x49"
        android:layout_marginTop="@dimen/x40"
        android:orientation="horizontal">

        <com.hyzs.onekeyhelp.widget.AlignTextView
            android:id="@+id/text1"
            android:layout_width="@dimen/x160"
            android:layout_height="match_parent"
            android:gravity="center"
            app:suffixMode="full_width"
            app:text="原始密码："
            android:textColor="@color/color_3"
            android:textSize="@dimen/y32" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/text1"
            android:background="@color/color_d" />

        <EditText
            android:id="@+id/activity_change_pwd_old"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/x2"
            android:layout_marginLeft="@dimen/x10"
            android:layout_toRightOf="@+id/text1"
            android:background="@null"
            android:hint="请输入原始密码"
            android:inputType="textPassword"
            android:textColor="@color/color_3"
            android:textColorHint="@color/color_9"
            android:textSize="@dimen/y26" />

        <ImageView
            android:id="@+id/activity_change_pwd_old_clear"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x14"
            android:src="@mipmap/grzx_mimaqingchu"
            android:visibility="invisible" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:layout_marginLeft="@dimen/x49"
        android:layout_marginRight="@dimen/x49"
        android:layout_marginTop="@dimen/x40"
        android:orientation="horizontal">

        <com.hyzs.onekeyhelp.widget.AlignTextView
            android:layout_width="@dimen/x160"
            android:layout_height="match_parent"
            android:gravity="center"
            app:suffixMode="full_width"
            app:text="新密码："
            android:textColor="@color/color_3"
            android:textSize="@dimen/y32" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <View
                android:layout_width="@dimen/x1"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/activity_change_pwd_new"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:gravity="left"
                    android:layout_marginBottom="@dimen/x2"
                    android:layout_marginLeft="@dimen/x10"
                    android:background="@null"
                    android:hint="请输入6 ~ 12位密码"
                    android:inputType="textPassword"
                    android:maxLength="12"
                    android:textColor="@color/color_3"
                    android:textColorHint="@color/color_9"
                    android:textSize="@dimen/y26" />

                <ImageView
                    android:id="@+id/activity_change_pwd_new_clear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/x14"
                    android:src="@mipmap/grzx_mimaqingchu"
                    android:visibility="invisible" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:background="@color/color_d" />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:layout_marginLeft="@dimen/x49"
        android:layout_marginRight="@dimen/x49"
        android:layout_marginTop="@dimen/x40"
        android:orientation="horizontal">

        <com.hyzs.onekeyhelp.widget.AlignTextView
            android:id="@+id/text2"
            android:layout_width="@dimen/x160"
            android:layout_height="match_parent"
            android:gravity="center"
            app:suffixMode="full_width"
            app:text="新密码："
            android:textColor="@color/color_3"
            android:textSize="@dimen/y32" />


        <TextView
            android:id="@+id/activity_change_pwd_error"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignRight="@+id/activity_change_pwd_newAgain_clear"
            android:layout_marginBottom="@dimen/x2"
            android:gravity="bottom"
            android:text="俩次输入密码不一致"
            android:textColor="#ef1111"
            android:textSize="@dimen/y26"
            android:visibility="invisible" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/text2"
            android:background="@color/color_d" />

        <EditText
            android:id="@+id/activity_change_pwd_newAgain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/x2"
            android:layout_marginLeft="@dimen/x10"
            android:layout_toRightOf="@+id/text2"
            android:background="@null"
            android:hint="请再次输入新密码"
            android:inputType="textPassword"
            android:textColor="@color/color_3"
            android:textColorHint="@color/color_9"
            android:textSize="@dimen/y26" />

        <ImageView
            android:id="@+id/activity_change_pwd_newAgain_clear"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x14"
            android:src="@mipmap/grzx_mimaqingchu"
            android:visibility="invisible" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/color_d" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x80"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/activity_change_pwd_sure"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/color_3"
            android:textSize="@dimen/y34" />

        <View
            android:layout_width="@dimen/x1"
            android:layout_height="@dimen/x40"
            android:layout_gravity="center"
            android:background="@color/color_f4" />

        <TextView
            android:id="@+id/activity_change_pwd_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/color_3"
            android:textSize="@dimen/y34" />
    </LinearLayout>
</LinearLayout>
