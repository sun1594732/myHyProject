<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x110"
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:gravity="center_vertical">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/expand_child_icon"
        android:layout_width="@dimen/x78"
        android:layout_height="@dimen/x78"
        android:src="@mipmap/beauty"
        android:layout_marginTop="@dimen/x10"
        android:layout_marginBottom="@dimen/x10"
        android:layout_marginLeft="@dimen/x30"/>
    <View
        android:layout_width="1px"
        android:layout_height="@dimen/x78"
        android:background="@color/color_d8"
        android:layout_marginLeft="@dimen/x30"/>
    <TextView
        android:id="@+id/expand_child_userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/x30"
        android:text="白富美"
        android:layout_marginLeft="@dimen/x30"
        android:textColor="@color/color_3"/>
    <TextView
        android:id="@+id/expand_child_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/x20"
        android:background="@drawable/shape_1ccd9b_10"
        android:text="邻居"
        android:paddingLeft="@dimen/x5"
        android:paddingRight="@dimen/x5"
        android:paddingTop="@dimen/x4"
        android:paddingBottom="@dimen/x4"
        android:layout_marginLeft="@dimen/x30"
        android:textColor="@color/color_1ccd9b"/>
    <View
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"/>
    <ImageView
        android:id="@+id/liao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/talk"/>
    <ImageView
        android:layout_width="@dimen/x40"
        android:layout_height="@dimen/x40"
        android:src="@mipmap/youjiantou"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x20"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/color_dfd"/>
</LinearLayout>