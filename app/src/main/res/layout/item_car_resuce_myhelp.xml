<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/x176"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="@dimen/x150"
                android:layout_height="@dimen/x150">

                <com.hyzs.onekeyhelp.widget.RoundImageView
                    android:scaleType="centerCrop"
                    android:id="@+id/item_car_resuce_myhelp_iv_face"
                    android:layout_width="@dimen/x111"
                    android:layout_height="@dimen/x111"
                    android:layout_marginLeft="@dimen/x30"
                    android:layout_marginTop="@dimen/x30"
                    android:src="@mipmap/icon_replace" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/item_car_resuce_myhelp_read"
                    android:layout_width="@dimen/x20"
                    android:layout_height="@dimen/x20"
                    android:layout_marginLeft="@dimen/x25"
                    android:layout_marginTop="@dimen/x25"
                    android:src="@color/color_f81302" />
            </FrameLayout>

            <TextView
                android:id="@+id/item_car_resuce_myhelp_tv_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x10"
                android:gravity="center_horizontal"
                android:text="等待救援"
                android:textColor="#f7221d"
                android:textSize="@dimen/x26"

                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_car_resuce_myhelp_tv_name"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x30"
                    android:text="张女士"
                    android:textColor="#444"
                    android:textSize="@dimen/y30" />

                <ImageView
                    android:id="@+id/item_car_resuce_myhelp_iv_identity"
                    android:layout_width="@dimen/x50"
                    android:layout_height="@dimen/x40"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_marginTop="@dimen/x27"

                    android:src="@mipmap/identity"

                    />

                <TextView
                    android:id="@+id/item_car_resuce_myhelp_tv_zheng"
                    android:layout_width="@dimen/x30"
                    android:layout_height="@dimen/x30"

                    android:layout_marginLeft="@dimen/x10"
                    android:layout_marginTop="@dimen/x24"
                    android:background="@drawable/shape_f81302_zheng"
                    android:gravity="center"
                    android:text="证"
                    android:textColor="@color/color_f"
                    android:textSize="@dimen/y20"
                    android:visibility="visible" />


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/x30"
                    android:layout_marginTop="@dimen/x36"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/x30"
                        android:layout_height="@dimen/x25"
                        android:layout_marginTop="@dimen/x3"
                        android:src="@drawable/chepai" />

                    <TextView
                        android:id="@+id/item_car_resuce_myhelp_tv_car_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x10"
                        android:text="京 A~1***8"
                        android:textColor="#4444"

                        android:textSize="@dimen/y26" />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x20"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/x23"
                    android:layout_height="@dimen/x23"
                    android:layout_marginTop="@dimen/x2"
                    android:src="@drawable/weizhi" />

                <TextView
                    android:id="@+id/item_car_resuce_myhelp_tv_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_marginRight="@dimen/x30"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="(GPS信息) 北京市朝阳区朝阳路财满街无敌大棒棒糖，刀，怒斩雪翼雕，山，豪迈冲云霄，火翻腾在燃烧，我直播砍曹操!"
                    android:textColor="#444444"
                    android:textSize="@dimen/x26" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x20"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/x23"
                    android:layout_height="@dimen/x23"
                    android:layout_marginTop="@dimen/x2"
                    android:src="@drawable/shijian" />

                <TextView
                    android:id="@+id/item_car_resuce_myhelp_tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x10"
                    android:text="2017-3-7 11:25"
                    android:textColor="#444"
                    android:textSize="@dimen/y26"

                    />


                <TextView
                    android:id="@+id/item_car_resuce_myhelp_tv_money"

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/x30"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="酬谢 999 元"
                    android:textColor="#444"
                    android:textSize="@dimen/y26"

                    />


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/x30"
        android:background="#f4f4f4"

        />


</LinearLayout>
