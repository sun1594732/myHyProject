<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x110"
    android:background="#fff"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_contact_list_icon"
            android:layout_width="@dimen/x78"
            android:layout_height="@dimen/x78"
            android:layout_marginBottom="@dimen/x10"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginTop="@dimen/x10"
            android:src="@mipmap/beauty" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/x15"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginTop="@dimen/x15"
            android:background="@color/color_d8" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="@dimen/x10">

                <TextView
                    android:id="@+id/item_contact_list_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x30"
                    android:paddingLeft="@dimen/x10"
                    android:text="白富美"
                    android:textColor="@color/color_3"
                    android:textSize="@dimen/x28" />

                <TextView
                    android:id="@+id/item_contact_list_community_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_marginTop="@dimen/x5"
                    android:text="康慧园小区"
                    android:textColor="@color/color_6"
                    android:textSize="@dimen/y26" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/x40"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/x10">

                <ImageView
                    android:id="@+id/item_contact_list_identity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/identity" />


                <TextView
                    android:id="@+id/item_contact_list_markContainer_zheng"
                    android:layout_width="@dimen/x30"
                    android:layout_height="@dimen/x30"
                    android:layout_marginLeft="@dimen/x4"
                    android:background="@drawable/shape_f81302_zheng"
                    android:paddingBottom="@dimen/x2"
                    android:paddingLeft="@dimen/x6"
                    android:paddingRight="@dimen/x6"
                    android:paddingTop="@dimen/x2"
                    android:text="证"
                    android:textColor="@color/color_f"
                    android:textSize="@dimen/y20"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/item_contact_list_markContainer_shang"
                    android:layout_width="@dimen/x30"
                    android:layout_height="@dimen/x30"
                    android:layout_marginLeft="@dimen/x4"
                    android:background="@drawable/shape_dd4337_8"
                    android:paddingBottom="@dimen/x2"
                    android:paddingLeft="@dimen/x6"
                    android:paddingRight="@dimen/x6"
                    android:paddingTop="@dimen/x2"
                    android:text="商"
                    android:textColor="@color/color_f"
                    android:textSize="@dimen/y20"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/item_contact_list_markContainer_fu"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/x30"
                    android:layout_marginLeft="@dimen/x4"
                    android:background="@drawable/shape_15b521_2"
                    android:paddingBottom="@dimen/x2"
                    android:paddingLeft="@dimen/x6"
                    android:paddingRight="@dimen/x6"
                    android:paddingTop="@dimen/x2"
                    android:text="服"
                    android:textColor="@color/color_f"
                    android:textSize="@dimen/y20"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/item_contact_list_markContainer_wu"
                    android:layout_width="@dimen/x30"
                    android:layout_height="@dimen/x30"
                    android:layout_marginLeft="@dimen/x4"
                    android:background="@drawable/shape_d8711e_3"
                    android:paddingBottom="@dimen/x2"
                    android:paddingLeft="@dimen/x6"
                    android:paddingRight="@dimen/x6"
                    android:paddingTop="@dimen/x2"
                    android:text="物"
                    android:textColor="@color/color_f"
                    android:textSize="@dimen/y20"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
        <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:textSize="@dimen/y26"-->
        <!--android:background="@drawable/shape_dd4337_8"-->
        <!--android:text="商"-->
        <!--android:paddingLeft="@dimen/x6"-->
        <!--android:paddingRight="@dimen/x6"-->
        <!--android:paddingTop="@dimen/x2"-->
        <!--android:paddingBottom="@dimen/x2"-->
        <!--android:layout_marginLeft="@dimen/x30"-->
        <!--android:textColor="@color/color_f"-->
        <!--android:id="@+id/textView6" />-->

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView

            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/talk" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:src="@mipmap/youjiantou" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#f4f4f4" />

</LinearLayout>