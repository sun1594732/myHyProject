<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x98"
    android:layout_gravity="center_vertical"
    android:background="@color/color_f"
    android:orientation="horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_contact_search_icon"
        android:layout_width="@dimen/x90"
        android:layout_height="@dimen/x90"
        android:layout_marginBottom="@dimen/x10"
        android:layout_marginLeft="@dimen/x28"
        android:layout_marginRight="@dimen/x24"
        android:layout_marginTop="@dimen/x10"
        android:src="@mipmap/replace_hybb" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="@dimen/x10">

            <TextView
                android:id="@+id/item_contact_search_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x30"
                android:paddingLeft="@dimen/x10"
                android:text="白富美"
                android:textColor="@color/color_3"
                android:textSize="@dimen/x30" />

            <TextView
                android:id="@+id/item_contact_search_community_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginTop="@dimen/x5"
                android:text="康慧园小区"
                android:textColor="@color/color_6"
                android:textSize="@dimen/y26" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/x40"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/x10">

            <ImageView
                android:id="@+id/item_contact_search_identity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/identity" />


            <TextView
                android:id="@+id/item_contact_search_zheng"
                android:layout_width="@dimen/x30"
                android:layout_height="@dimen/x30"
                android:layout_marginLeft="@dimen/x4"
                android:background="@drawable/shape_1ccd9b_6_soild"
                android:paddingBottom="@dimen/x2"
                android:paddingLeft="@dimen/x6"
                android:paddingRight="@dimen/x6"
                android:paddingTop="@dimen/x2"
                android:text="证"
                android:textColor="@color/color_f"
                android:textSize="@dimen/y20"
                android:visibility="visible" />

            <TextView
                android:id="@+id/item_contact_search_shang"
                android:layout_width="@dimen/x30"
                android:layout_height="@dimen/x30"
                android:paddingBottom="@dimen/x2"
                android:paddingLeft="@dimen/x6"
                android:paddingRight="@dimen/x6"
                android:paddingTop="@dimen/x2"
                android:layout_marginLeft="@dimen/x4"
                android:background="@drawable/shape_dd4337_8"
                android:text="商"
                android:textColor="@color/color_f"
                android:textSize="@dimen/y20"
                android:visibility="gone" />
            <TextView
                android:id="@+id/item_contact_search_fu"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/x30"
                android:paddingBottom="@dimen/x2"
                android:paddingLeft="@dimen/x6"
                android:paddingRight="@dimen/x6"
                android:paddingTop="@dimen/x2"
                android:layout_marginLeft="@dimen/x4"
                android:background="@drawable/shape_15b521_2"
                android:text="服"
                android:textColor="@color/color_f"
                android:textSize="@dimen/y20"
                android:visibility="gone" />
            <TextView
                android:id="@+id/item_contact_search_wu"
                android:layout_width="@dimen/x30"
                android:layout_height="@dimen/x30"
                android:paddingBottom="@dimen/x2"
                android:paddingLeft="@dimen/x6"
                android:paddingRight="@dimen/x6"
                android:paddingTop="@dimen/x2"
                android:layout_marginLeft="@dimen/x4"
                android:background="@drawable/shape_d8711e_3"
                android:text="物"
                android:textColor="@color/color_f"
                android:textSize="@dimen/y20"
                android:visibility="gone" />
            <TextView
                android:id="@+id/item_contact_search_jiu"
                android:layout_width="@dimen/x30"
                android:layout_height="@dimen/x30"
                android:paddingBottom="@dimen/x2"
                android:paddingLeft="@dimen/x6"
                android:paddingRight="@dimen/x6"
                android:paddingTop="@dimen/x2"
                android:layout_marginLeft="@dimen/x4"
                android:background="@drawable/shape_0_f4_solid"
                android:text="救"
                android:textColor="@color/color_f"
                android:textSize="@dimen/y20"
                android:visibility="gone" />
            <TextView
                android:id="@+id/item_contact_search_ke"
                android:layout_width="@dimen/x30"
                android:layout_height="@dimen/x30"
                android:paddingBottom="@dimen/x2"
                android:paddingLeft="@dimen/x6"
                android:paddingRight="@dimen/x6"
                android:paddingTop="@dimen/x2"
                android:layout_marginLeft="@dimen/x4"
                android:background="@drawable/shape_15b521_2"
                android:text="客"
                android:textColor="@color/color_f"
                android:textSize="@dimen/y26"
                android:visibility="gone" />
            <TextView
                android:id="@+id/item_contact_search_jie"
                android:layout_width="@dimen/x30"
                android:layout_height="@dimen/x30"
                android:paddingBottom="@dimen/x2"
                android:paddingLeft="@dimen/x6"
                android:paddingRight="@dimen/x6"
                android:paddingTop="@dimen/x2"
                android:layout_marginLeft="@dimen/x4"
                android:background="@drawable/shape_f751c6"
                android:text="街"
                android:textColor="@color/color_f"
                android:textSize="@dimen/y26"
                android:visibility="gone" />

            <TextView
                android:id="@+id/item_contact_search_lin"
                android:layout_width="@dimen/x30"
                android:layout_height="@dimen/x30"
                android:paddingBottom="@dimen/x2"
                android:paddingLeft="@dimen/x6"
                android:paddingRight="@dimen/x6"
                android:paddingTop="@dimen/x2"
                android:layout_marginLeft="@dimen/x4"
                android:background="@drawable/shape_1ccd9b_6_soild"
                android:text="邻"
                android:textColor="@color/color_f"
                android:textSize="@dimen/y26"
                android:visibility="gone" />

            <TextView
                android:id="@+id/item_contact_search_jin"
                android:layout_width="@dimen/x30"
                android:layout_height="@dimen/x30"
                android:paddingBottom="@dimen/x2"
                android:paddingLeft="@dimen/x6"
                android:paddingRight="@dimen/x6"
                android:paddingTop="@dimen/x2"
                android:layout_marginLeft="@dimen/x4"
                android:background="@drawable/shape_f9404a"
                android:text="紧"
                android:textColor="@color/color_f"
                android:textSize="@dimen/y26"
                android:visibility="gone" />

            <TextView
                android:id="@+id/item_contact_search_wei"
                android:layout_width="@dimen/x30"
                android:layout_height="@dimen/x30"
                android:paddingBottom="@dimen/x2"
                android:paddingLeft="@dimen/x6"
                android:paddingRight="@dimen/x6"
                android:paddingTop="@dimen/x2"
                android:layout_marginLeft="@dimen/x4"
                android:background="@drawable/shape_408ff9"
                android:text="委"
                android:textColor="@color/color_f"
                android:textSize="@dimen/y26"
                android:visibility="gone" />

            <TextView
                android:id="@+id/item_contact_search_jia"
                android:layout_width="@dimen/x30"
                android:layout_height="@dimen/x30"
                android:paddingBottom="@dimen/x2"
                android:paddingLeft="@dimen/x6"
                android:paddingRight="@dimen/x6"
                android:paddingTop="@dimen/x2"
                android:layout_marginLeft="@dimen/x4"
                android:background="@drawable/shape_f96840"
                android:text="家"
                android:textColor="@color/color_f"
                android:textSize="@dimen/y26"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <View
        android:layout_width="@dimen/x1"
        android:layout_height="@dimen/x58"
        android:layout_gravity="center"
        android:background="@color/color_d8" />

    <TextView
        android:id="@+id/item_contact_search_status"
        android:layout_width="@dimen/x134"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginLeft="@dimen/x16"
        android:layout_marginRight="@dimen/x20"
        android:text="+ 加好友"
        android:textColor="@color/color_1ccd9b"
        android:textSize="@dimen/y30" />

</LinearLayout>