<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/fragment_only_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        android:visibility="gone" />

    <com.hyzs.onekeyhelp.widget.view.VRefresh
        android:id="@+id/fragment_only_vRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/fragment_only_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/color_d"
            android:dividerHeight="@dimen/x1" />
    </com.hyzs.onekeyhelp.widget.view.VRefresh>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/color_d" />
</LinearLayout>