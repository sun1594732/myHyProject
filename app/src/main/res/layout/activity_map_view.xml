<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_map_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_f">

    <com.baidu.mapapi.map.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x80"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/map_des"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/color_3"
            android:textSize="@dimen/y26"
            android:gravity="center"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x30"
            android:background="@color/color_f"/>
        <TextView
            android:id="@+id/map_sure"
            android:layout_width="@dimen/x140"
            android:gravity="center"
            android:background="@color/color_1ccd9b"
            android:layout_height="match_parent"
            android:textColor="@color/color_f"
            android:textSize="@dimen/y30"
            android:text="确定"/>
    </LinearLayout>
</LinearLayout>
