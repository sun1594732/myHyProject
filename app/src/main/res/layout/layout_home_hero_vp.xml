<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_f">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.hyzs.onekeyhelp.widget.RoundImageView
            android:id="@+id/fragment_home_hero_icon"
            android:layout_width="@dimen/x120"
            android:layout_height="@dimen/x120"
            android:layout_margin="@dimen/x30"
            android:scaleType="centerCrop"
            android:src="@mipmap/replace_hybb" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x34"
                android:layout_marginTop="@dimen/x24"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fragment_home_hero_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="hello"
                    android:layout_gravity="center"
                    android:textColor="@color/color_3"
                    android:textSize="@dimen/y30" />

                <ImageView
                    android:id="@+id/fragment_home_hero_identityCard"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:layout_marginLeft="@dimen/x10"
                    android:src="@mipmap/identity" />

                <TextView
                    android:id="@+id/fragment_home_hero_zheng"
                    android:layout_width="@dimen/x30"
                    android:layout_height="@dimen/x30"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/shape_f81302_zheng"
                    android:gravity="center"
                    android:visibility="gone"
                    android:text="证"
                    android:textColor="@color/color_f"
                    android:textSize="@dimen/y22" />
            </LinearLayout>

            <TextView
                android:id="@+id/fragment_home_hero_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x14"
                android:drawableLeft="@mipmap/sy_weizhi"
                android:drawablePadding="@dimen/x10"
                android:text="莲宝路十号院"
                android:textColor="@color/color_3"
                android:textSize="@dimen/y26" />

            <TextView
                android:id="@+id/fragment_home_hero_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x14"
                android:drawableLeft="@mipmap/sy_qianming"
                android:drawablePadding="@dimen/x10"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="莲宝路十号院"
                android:textColor="@color/color_3"
                android:textSize="@dimen/y26" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/color_d" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/x20"
                android:drawablePadding="@dimen/x14"
                android:drawableTop="@mipmap/bangzhutaren"
                android:text="帮助 Ta 人"
                android:textColor="@color/color_3"
                android:textSize="@dimen/y30" />

            <TextView
                android:id="@+id/fragment_home_helpCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/x8"
                android:text="999"
                android:textColor="@color/color_f81302"
                android:textSize="@dimen/y26" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/x1"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/x20"
            android:background="@color/color_d" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/x20"
                android:drawablePadding="@dimen/x14"
                android:drawableTop="@mipmap/guanzhu"
                android:text="关注人数"
                android:textColor="@color/color_3"
                android:textSize="@dimen/y30" />

            <TextView
                android:id="@+id/fragment_home_attentionCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/x8"
                android:text="999"
                android:textColor="@color/color_f81302"
                android:textSize="@dimen/y26" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/x1"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/x20"
            android:background="@color/color_d" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/x20"
                android:drawablePadding="@dimen/x10"
                android:drawableTop="@mipmap/sy_renqibang"
                android:text="人气榜"
                android:textColor="@color/color_3"
                android:textSize="@dimen/y30" />

            <TextView
                android:id="@+id/fragment_home_heroCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/x10"
                android:text="999"
                android:textColor="@color/color_f81302"
                android:textSize="@dimen/y26" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>