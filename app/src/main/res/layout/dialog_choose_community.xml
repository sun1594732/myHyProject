<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_add_hand"
    android:orientation="vertical">

    <ListView
        android:id="@+id/dialog_choose_community_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/color_d"
        android:dividerHeight="@dimen/x1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/color_d8" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/x10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_choose_community_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/x16"
            android:text="取消"
            android:textSize="@dimen/y30"
            android:textColor="@color/color_6" />

        <View
            android:layout_width="@dimen/x1"
            android:layout_height="match_parent"
            android:background="@color/color_d8" />

        <TextView
            android:id="@+id/dialog_choose_community_sure"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/x16"
            android:textSize="@dimen/y30"
            android:text="确定"
            android:textColor="@color/color_6" />
    </LinearLayout>
</LinearLayout>