<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x126"
    android:background="#fff"
    android:gravity="center_vertical"
    android:orientation="horizontal">
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_contact_recent_icon"
            android:layout_width="@dimen/x86"
            android:layout_height="@dimen/x86"
            android:layout_marginBottom="@dimen/x20"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginTop="@dimen/x20"
            android:scaleType="centerCrop"
            android:layout_marginRight="@dimen/x30"
            android:src="@mipmap/replace_hybb" />

        <TextView
            android:id="@+id/item_contact_recent_qipao"
            android:layout_width="@dimen/x30"
            android:layout_height="@dimen/x30"
            android:layout_marginLeft="@dimen/x80"
            android:layout_marginTop="@dimen/x15"
            android:background="@drawable/shape_qipao"
            android:gravity="center"
            android:text="1"
            android:textSize="@dimen/y18"
            android:textStyle="bold" />

    </FrameLayout>

    <View
        android:layout_width="@dimen/x1"
        android:layout_height="@dimen/x126"
        android:background="@color/color_d"/>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <TextView
        android:id="@+id/item_contact_recent_userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/y30"
        android:text="白富美"
        android:layout_marginTop="@dimen/x28"
        android:layout_marginLeft="@dimen/x30"
        android:textColor="@color/color_3"/>
    <TextView
        android:id="@+id/item_contact_recent_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/x26"
        android:layout_marginTop="@dimen/x5"
        android:maxEms="8"
        android:singleLine="true"
        android:ellipsize="none"
        android:layout_marginLeft="@dimen/x30"
        android:textColor="@color/color_9"/>
        </LinearLayout>
    <View
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/item_contact_recent_time"
        android:layout_width="wrap_content"
        android:textColor="@color/color_9"
        android:textSize="@dimen/x26"
        android:layout_marginRight="@dimen/x50"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/item_contact_recent_initiated_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/talk"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/youjiantou"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"/>
        android:layout_width="@dimen/x40"
        android:layout_height="@dimen/x40"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x20"
        android:src="@mipmap/arrow_right" />

</LinearLayout>