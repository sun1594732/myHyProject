<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="@dimen/y160"
    android:background="@color/color_f">
    <TextView
        android:layout_centerInParent="true"
        android:id="@+id/item_right_slide_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="一键帮助"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="@dimen/y26"
        android:textColor="@color/color_3"
        android:drawablePadding="@dimen/x10"
        android:layout_marginBottom="@dimen/x14"
        android:gravity="center"/>
    <View
        android:visibility="invisible"
        android:id="@+id/item_right_slide_line"
        android:layout_width="@dimen/x1"
        android:layout_height="@dimen/y160"
        android:background="@color/color_d"
        android:layout_marginTop="@dimen/x10"
        android:layout_marginBottom="@dimen/x10"
        android:layout_alignParentRight="true"/>
    <View
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/color_d"
        android:layout_alignParentBottom="true"/>

    <ImageView
        android:layout_width="@dimen/x80"
        android:layout_height="@dimen/x80"
        android:src="@mipmap/classify_badmintom"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/x20"
        android:layout_centerHorizontal="true"
        android:id="@+id/item_right_slide_img" />
</RelativeLayout>