<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_mine_service_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                android:id="@+id/activity_mine_service_detail_header"
                layout="@layout/item_mine_service_layout" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x2"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginRight="@dimen/x30"
                android:background="@color/color_d" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x30"
                    android:layout_marginTop="@dimen/x40"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="@dimen/x6"
                        android:layout_height="@dimen/x35"
                        android:background="@color/color_1ccd9b" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x16"
                        android:text="个人信息"
                        android:textColor="@color/color_3"
                        android:textSize="@dimen/y34" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x30"
                    android:layout_marginRight="@dimen/x30"
                    android:layout_marginTop="@dimen/x30"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="身份证号："
                        android:textColor="@color/color_3"
                        android:textSize="@dimen/y30" />

                    <TextView
                        android:id="@+id/activity_mine_service_detail_ID_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3333333333****3333"
                        android:textColor="@color/color_3"
                        android:textSize="@dimen/y30" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x1"
                    android:layout_marginBottom="@dimen/x15"
                    android:layout_marginLeft="@dimen/x30"
                    android:layout_marginRight="@dimen/x30"
                    android:layout_marginTop="@dimen/x15"
                    android:background="@color/color_d" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x30"
                    android:layout_marginRight="@dimen/x30"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="手机号码："
                        android:textColor="@color/color_3"
                        android:textSize="@dimen/y30" />

                    <TextView
                        android:id="@+id/activity_mine_service_detail_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="131****5678"
                        android:textColor="@color/color_3"
                        android:textSize="@dimen/y30" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x1"
                    android:layout_marginBottom="@dimen/x15"
                    android:layout_marginLeft="@dimen/x30"
                    android:layout_marginRight="@dimen/x30"
                    android:layout_marginTop="@dimen/x15"
                    android:background="@color/color_d" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x30"
                    android:layout_marginRight="@dimen/x30"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="擅长类型："
                        android:textColor="@color/color_3"
                        android:textSize="@dimen/y30" />

                    <TextView
                        android:id="@+id/activity_mine_service_detail_good_at_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="面食、月嫂、家庭收纳"
                        android:textColor="@color/color_3"
                        android:textSize="@dimen/y30" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x1"
                    android:layout_marginBottom="@dimen/x15"
                    android:layout_marginLeft="@dimen/x30"
                    android:layout_marginRight="@dimen/x30"
                    android:layout_marginTop="@dimen/x15"
                    android:background="@color/color_d" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x30"
                    android:layout_marginRight="@dimen/x30"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="服务类型："
                        android:textColor="@color/color_3"
                        android:textSize="@dimen/y30" />

                    <TextView
                        android:id="@+id/activity_mine_service_detail_service_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="全职"
                        android:textColor="@color/color_3"
                        android:textSize="@dimen/y30" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x1"
                    android:layout_marginBottom="@dimen/x15"
                    android:layout_marginLeft="@dimen/x30"
                    android:layout_marginRight="@dimen/x30"
                    android:layout_marginTop="@dimen/x15"
                    android:background="@color/color_d" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x30"
                    android:layout_marginRight="@dimen/x30"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/activity_mine_service_detail_age_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="年啊啊龄："
                        android:textColor="@color/color_3"
                        android:textSize="@dimen/y30" />

                    <TextView
                        android:id="@+id/_activity_mine_service_detail_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="48岁"
                        android:textColor="@color/color_3"
                        android:textSize="@dimen/y30" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x1"
                    android:layout_marginBottom="@dimen/x15"
                    android:layout_marginLeft="@dimen/x30"
                    android:layout_marginRight="@dimen/x30"
                    android:layout_marginTop="@dimen/x15"
                    android:background="@color/color_d" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x30"
                    android:layout_marginRight="@dimen/x30"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="服务城市："
                        android:textColor="@color/color_3"
                        android:textSize="@dimen/y30" />

                    <TextView
                        android:id="@+id/activity_mine_service_detail_service_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="北京"
                        android:textColor="@color/color_3"
                        android:textSize="@dimen/y30" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x1"
                    android:layout_marginBottom="@dimen/x15"
                    android:layout_marginLeft="@dimen/x30"
                    android:layout_marginRight="@dimen/x30"
                    android:layout_marginTop="@dimen/x15"
                    android:background="@color/color_d" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x30"
                    android:layout_marginRight="@dimen/x30"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="婚姻状况："
                        android:textColor="@color/color_3"
                        android:textSize="@dimen/y30" />

                    <TextView
                        android:id="@+id/activity_mine_service_detail_marital_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已婚"
                        android:textColor="@color/color_3"
                        android:textSize="@dimen/y30" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x1"
                    android:layout_marginBottom="@dimen/x15"
                    android:layout_marginLeft="@dimen/x30"
                    android:layout_marginRight="@dimen/x30"
                    android:layout_marginTop="@dimen/x15"
                    android:background="@color/color_d" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x30"
                    android:layout_marginRight="@dimen/x30"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="文化程度："
                        android:textColor="@color/color_3"
                        android:textSize="@dimen/y30" />

                    <TextView
                        android:id="@+id/activity_mine_service_detail_education"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="高中"
                        android:textColor="@color/color_3"
                        android:textSize="@dimen/y30" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x1"
                    android:layout_marginBottom="@dimen/x15"
                    android:layout_marginLeft="@dimen/x30"
                    android:layout_marginRight="@dimen/x30"
                    android:layout_marginTop="@dimen/x15"
                    android:background="@color/color_d" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x30"
                    android:layout_marginRight="@dimen/x30"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="工作年限："
                        android:textColor="@color/color_3"
                        android:textSize="@dimen/y30" />

                    <TextView
                        android:id="@+id/activity_mine_service_detail_years_of_work"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4年"
                        android:textColor="@color/color_3"
                        android:textSize="@dimen/y30" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x1"
                    android:layout_marginBottom="@dimen/x15"
                    android:layout_marginLeft="@dimen/x30"
                    android:layout_marginRight="@dimen/x30"
                    android:layout_marginTop="@dimen/x15"
                    android:background="@color/color_d" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x30"
                    android:layout_marginRight="@dimen/x30"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="目前状态："
                        android:textColor="@color/color_3"
                        android:textSize="@dimen/y30" />

                    <TextView
                        android:id="@+id/activity_mine_service_detail_work_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="现离职中，可立即上岗"
                        android:textColor="@color/color_3"
                        android:textSize="@dimen/y30" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x1"
                    android:layout_marginBottom="@dimen/x15"
                    android:layout_marginLeft="@dimen/x30"
                    android:layout_marginRight="@dimen/x30"
                    android:layout_marginTop="@dimen/x15"
                    android:background="@color/color_d" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginTop="@dimen/x40"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/x6"
                    android:layout_height="@dimen/x35"
                    android:background="@color/color_1ccd9b" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x16"
                    android:text="工作经历"
                    android:textColor="@color/color_3"
                    android:textSize="@dimen/y34" />
            </LinearLayout>

            <com.hyzs.onekeyhelp.widget.ListViewForScrollView
                android:id="@+id/activity_mine_service_detail_experience_listview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x30">

            </com.hyzs.onekeyhelp.widget.ListViewForScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginTop="@dimen/x30"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/x6"
                    android:layout_height="@dimen/x35"
                    android:background="@color/color_1ccd9b" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x16"
                    android:layout_weight="1"
                    android:text="服务项目"
                    android:textColor="@color/color_3"
                    android:textSize="@dimen/y34" />

                <TextView
                    android:id="@+id/activity_mine_service_detail_project_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/x30"
                    android:drawablePadding="@dimen/x10"
                    android:drawableRight="@mipmap/more"
                    android:text="查看更多"
                    android:textColor="@color/color_1ccd9b"
                    android:textSize="@dimen/y30" />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/activity_mine_service_detail_project_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginRight="@dimen/x30"
                android:layout_marginTop="@dimen/x20"
                android:visibility="gone">

            </android.support.v7.widget.RecyclerView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginTop="@dimen/x30"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/x6"
                    android:layout_height="@dimen/x35"
                    android:background="@color/color_1ccd9b" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x16"
                    android:layout_weight="1"
                    android:text="用户评价"
                    android:textColor="@color/color_3"
                    android:textSize="@dimen/y34" />

                <TextView
                    android:id="@+id/activity_mine_service_detail_comment_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/x30"
                    android:drawablePadding="@dimen/x10"
                    android:drawableRight="@mipmap/more"
                    android:text="查看更多"
                    android:textColor="@color/color_1ccd9b"
                    android:textSize="@dimen/y30" />
            </LinearLayout>

            <com.hyzs.onekeyhelp.widget.ListViewForScrollView
                android:id="@+id/activity_mine_service_detail_comment_listview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:divider="@color/color_d"
                android:dividerHeight="@dimen/x1">

            </com.hyzs.onekeyhelp.widget.ListViewForScrollView>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x80"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/activity_mine_service_detail_chat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_fb202b"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x10"
                android:layout_marginTop="@dimen/x10"
                android:drawableLeft="@mipmap/chat"
                android:drawablePadding="@dimen/x10"
                android:gravity="center"
                android:text="在线聊天"
                android:textColor="@color/color_f"
                android:textSize="@dimen/y30" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_mine_service_detail_reservation"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_66baf"
            android:gravity="center">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/documen"
                android:drawablePadding="@dimen/x10"
                android:gravity="center"
                android:text="在线预约"
                android:textColor="@color/color_f"
                android:textSize="@dimen/y30" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_mine_service_detail_call_phone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_15b521"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/call_phone"
                android:drawablePadding="@dimen/x10"
                android:gravity="center"
                android:text="电话联系"
                android:textColor="@color/color_f"
                android:textSize="@dimen/y30" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>