<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_family_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:id="@+id/activity_family_list_option"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x200"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/activity_family_list_add"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="添加成员"
            android:textColor="@color/color_3"
            android:textSize="@dimen/y30" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="@color/color_d" />

        <TextView
            android:id="@+id/activity_family_list_delete"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="删除成员"
            android:textColor="@color/color_3"
            android:textSize="@dimen/y30" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="@color/color_d" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/activity_family_list_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x200"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/activity_family_list_album"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/x30"
                android:layout_weight="1"
                android:drawablePadding="@dimen/x20"
                android:drawableTop="@mipmap/jiatingxiangce"
                android:gravity="center_horizontal"
                android:text="家庭相册"
                android:textColor="@color/color_3"
                android:textSize="@dimen/y30" />

            <TextView
                android:id="@+id/activity_family_list_record"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/x30"
                android:layout_weight="1"
                android:drawablePadding="@dimen/x20"
                android:drawableTop="@mipmap/jiatingjishi"
                android:gravity="center_horizontal"
                android:text="家庭记事"
                android:textColor="@color/color_3"
                android:textSize="@dimen/y30" />

            <TextView
                android:id="@+id/activity_family_list_circle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/x30"
                android:layout_weight="1"
                android:drawablePadding="@dimen/x20"
                android:drawableTop="@mipmap/jiatingdongtai"
                android:gravity="center_horizontal"
                android:text="家庭动态"
                android:textColor="@color/color_3"
                android:textSize="@dimen/y30" />

            <TextView
                android:id="@+id/activity_family_list_member"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/x30"
                android:layout_weight="1"
                android:drawablePadding="@dimen/x20"
                android:drawableTop="@mipmap/jiatingchengyuan"
                android:gravity="center_horizontal"
                android:text="家庭成员"
                android:textColor="@color/color_3"
                android:textSize="@dimen/y30" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x4"
            android:background="@color/color_d"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:id="@+id/scroll_line"
                android:layout_width="@dimen/x180"
                android:layout_height="match_parent"
                android:background="@color/color_1ccd9b" />
        </LinearLayout>
    </LinearLayout>

    <com.hyzs.onekeyhelp.widget.CanBanScrollViewPager xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/activity_family_list_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:isScroll="true" />

    <LinearLayout
        android:id="@+id/fragment_family_member_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x80"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/fragment_family_member_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_f4"
            android:gravity="center"
            android:text="同意"
            android:textColor="@color/color_3"
            android:textSize="@dimen/y34" />

        <TextView
            android:id="@+id/fragment_family_member_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_1ccd9b"
            android:gravity="center"
            android:text="拒绝"
            android:textColor="@color/color_f"
            android:textSize="@dimen/y34" />
    </LinearLayout>
</LinearLayout>
