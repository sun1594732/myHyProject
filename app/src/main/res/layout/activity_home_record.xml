<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_home_record"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ListView
            android:id="@+id/activity_home_record_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.hyzs.onekeyhelp.widget.GIFview
            android:visibility="gone"
            android:id="@+id/activity_home_record_gif"
            android:layout_width="@dimen/x300"
            android:layout_height="@dimen/x400"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/x40"/>
        <ImageView
            android:visibility="gone"
            android:id="@+id/activity_home_record_img"
            android:layout_width="@dimen/x300"
            android:layout_height="@dimen/x400"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/x40"
            android:src="@mipmap/jiating_qvxiaofasong"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/color_d" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x90"
        android:background="@color/color_f4">

        <TextView
            android:id="@+id/activity_home_record_btn"
            android:layout_width="@dimen/x500"
            android:layout_height="@dimen/x70"
            android:layout_centerInParent="true"
            android:background="@drawable/shape_6_boder9_solidf4"
            android:drawableLeft="@mipmap/yuyinjizhang_luru"
            android:drawablePadding="@dimen/x46"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/x130"
            android:text="按住说话"
            android:textSize="@dimen/y34"
            android:textColor="@color/color_3" />
    </RelativeLayout>
</LinearLayout>
