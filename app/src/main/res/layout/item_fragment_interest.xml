<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/x10"
    android:layout_marginRight="@dimen/x10"
    android:background="@color/color_f"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x78"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_fragment_interest_icon"
            android:layout_width="@dimen/x46"
            android:layout_height="@dimen/x46"
            android:layout_marginLeft="@dimen/x27"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/item_fragment_interest_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x18"
            android:text="多啦A小梦"
            android:textColor="@color/color_3"
            android:textSize="@dimen/y30" />

        <TextView
            android:id="@+id/item_fragment_interest_gender"
            android:layout_width="@dimen/x52"
            android:layout_height="@dimen/x25"
            android:layout_marginLeft="@dimen/x16"
            android:background="@drawable/shape_1ccd9b_6_soild"
            android:drawableLeft="@mipmap/man"
            android:drawablePadding="@dimen/x4"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/x6"
            android:text="男"
            android:textSize="@dimen/y20" />

        <View
            android:id="@+id/view4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/item_fragment_interest_community"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x35"
            android:paddingTop="@dimen/x10"
            android:text="花园小区"
            android:textColor="@color/color_9"
            android:textSize="@dimen/y26" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/color_f4" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/item_fragment_interest_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/x10"
        android:paddingRight="@dimen/x10" />

    <RelativeLayout
        android:id="@+id/item_fragment_interest_ll"
        android:layout_width="@dimen/x200"
        android:layout_height="@dimen/x200"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginTop="@dimen/x20"
        android:visibility="gone">

        <com.hyzs.onekeyhelp.widget.RoundImageView
            android:id="@+id/item_fragment_interest_videoPic"
            android:layout_width="@dimen/x200"
            android:layout_height="@dimen/x200"
            android:scaleType="centerCrop" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/quanzi_shipinbofang"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/x18"
        android:paddingRight="@dimen/x18"
        android:paddingTop="@dimen/x10">

        <TextView
            android:id="@+id/item_fragment_interest_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:autoLink="all"
            android:linksClickable="true"
            android:lineSpacingMultiplier="1.2"
            android:text="周庄，景点可商量，住宿可分摊，吃饭可一起。求约"
            android:textColor="@color/color_3"
            android:textSize="@dimen/y30" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x60"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_fragment_interest_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginTop="@dimen/x10"
                android:text="10分钟前"
                android:textColor="@color/color_9"
                android:textSize="@dimen/y26" />

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/item_fragment_interest_attention"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x18"
                android:layout_marginTop="@dimen/x10"
                android:drawableLeft="@mipmap/quanzi_guanzhu"
                android:drawablePadding="@dimen/x5"
                android:gravity="bottom"
                android:text="关注"
                android:textColor="@color/color_9"
                android:textSize="@dimen/y26"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/item_fragment_interest_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x18"
                android:layout_marginTop="@dimen/x10"
                android:drawableLeft="@mipmap/dianzan"
                android:drawablePadding="@dimen/x5"
                android:gravity="bottom"
                android:text="100"
                android:textColor="@color/color_9"
                android:textSize="@dimen/y26" />

            <TextView
                android:id="@+id/item_fragment_interest_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x18"
                android:layout_marginTop="@dimen/x10"
                android:drawableLeft="@mipmap/pinglun"
                android:drawablePadding="@dimen/x5"
                android:text="100"
                android:textColor="@color/color_9"
                android:textSize="@dimen/y26" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/x20"
        android:background="@color/color_f4" />


</LinearLayout>
