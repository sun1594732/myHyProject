<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x180"
    android:background="@color/color_f"
    android:orientation="horizontal">

    <View
        android:layout_width="@dimen/x1"
        android:layout_height="@dimen/x180"
        android:background="@color/color_2d2d2d"/>
    <com.hyzs.onekeyhelp.widget.RoundImageView
        android:id="@+id/item_home_active_nopic_pic"
        android:layout_width="@dimen/x180"
        android:layout_height="@dimen/x120"
        android:scaleType="centerCrop"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/x30"
        android:src="@mipmap/beauty" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_home_active_nopic_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x30"
            android:layout_marginTop="@dimen/x20"
            android:text="TextView"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/color_3"
            style="@style/y34text" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/x24">

            <TextView
                android:id="@+id/item_home_active_nopic_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x30"
                android:drawableLeft="@mipmap/sy_shijian"
                android:drawablePadding="@dimen/x10"
                android:text="TextView"
                android:textColor="@color/color_3"
                android:textSize="@dimen/y26" />

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/x1"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/item_home_active_nopic_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/x40"
                android:layout_marginRight="@dimen/x40"
                android:drawablePadding="@dimen/x10"
                android:text="TextView"
                android:drawableLeft="@mipmap/sy_huodong"
                android:textColor="@color/color_3"
                android:textSize="@dimen/y26" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>