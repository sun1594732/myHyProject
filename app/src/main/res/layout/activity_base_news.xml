<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/activity_base_news"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context="com.hyzs.onekeyhelp.news.BaseNewsActivity">

    <include layout="@layout/toolbar" />


    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/activity_circle_tabLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x94"
        android:background="@color/color_f"
        app:tl_divider_width="0dp"
        app:tl_indicator_color="@color/color_1ccd9b"
        app:tl_indicator_gravity="BOTTOM"
        app:tl_indicator_height="@dimen/x4"
        app:tl_indicator_style="NORMAL"
        app:tl_indicator_width="@dimen/x92"
        app:tl_tab_space_equal="true"
        app:tl_textSelectColor="@color/color_3"
        app:tl_textUnselectColor="@color/color_6"
        app:tl_textsize="@dimen/y30"
        app:tl_underline_height="0dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/color_d8" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x10"
        android:background="@color/color_f" />

    <android.support.v4.view.ViewPager
        android:id="@+id/activity_circle_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>
