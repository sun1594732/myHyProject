<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x200"
    android:background="@color/color_f"
    android:orientation="horizontal">

    <View
        android:layout_width="@dimen/x1"
        android:layout_height="@dimen/x200"
        android:background="@color/color_f" />

    <LinearLayout
        android:layout_width="@dimen/x240"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.hyzs.onekeyhelp.widget.RoundImageView
            android:id="@+id/item_home_post_pic"
            android:layout_width="@dimen/x180"
            android:layout_height="@dimen/x140"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginTop="@dimen/x30"
            android:scaleType="centerCrop"
            android:src="@mipmap/beauty" />

        <TextView
            android:visibility="gone"
            android:id="@+id/item_home_post_position"
            android:layout_width="@dimen/x190"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/x14"
            android:drawableLeft="@mipmap/sy_weizhi"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="test"
            android:textColor="@color/color_3"
            android:textSize="@dimen/y26" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:layout_marginTop="@dimen/x26"
            android:id="@+id/item_home_post_title"
            style="@style/y30text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x30"
            android:ellipsize="end"
            android:lineSpacingMultiplier="1.4"
            android:maxLines="2"
            android:text="TextViewsdddddddddddddddddddddddddddddddddd"
            android:textColor="@color/color_3" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x22"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_home_post_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/sy_shijian"
                android:drawablePadding="@dimen/x10"
                android:text="TextView"
                android:textColor="@color/color_3"
                android:textSize="@dimen/y26" />

            <TextView
                android:id="@+id/item_home_post_organization"
                android:paddingLeft="@dimen/x40"
                android:paddingRight="@dimen/x30"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:maxLines="1"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/sy_faburen"
                android:drawablePadding="@dimen/x10"
                android:text="TextView"
                android:ellipsize="end"
                android:textColor="@color/color_3"
                android:textSize="@dimen/y26" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>