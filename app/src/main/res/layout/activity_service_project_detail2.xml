<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/activity_service_project_detail2_img"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x520"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/activity_service_project_detail2_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/x30"
                android:text="擦玻璃啊擦玻璃"
                android:textColor="@color/color_3"
                android:textSize="@dimen/y30" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x30"
                    android:text="服务价格"
                    android:textColor="@color/color_6"
                    android:textSize="@dimen/y28" />

                <TextView
                    android:id="@+id/activity_service_project_detail2_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x30"
                    android:text="150 / 次"
                    android:textColor="@color/color_ff3d2f"
                    android:textSize="@dimen/y30" />

                <TextView
                    android:id="@+id/activity_service_project_detail2_oldPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x30"
                    android:text="250"
                    android:textColor="@color/color_9"
                    android:textSize="@dimen/y22" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x20"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x30"
                    android:text="服务对象"
                    android:textColor="@color/color_6"
                    android:textSize="@dimen/y28" />

                <TextView
                    android:id="@+id/activity_service_project_detail2_object"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x30"
                    android:text="家庭"
                    android:textColor="@color/color_ff3d2f"
                    android:textSize="@dimen/y34" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginTop="@dimen/x20"
                android:background="@color/color_d" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginTop="@dimen/x40"
                android:text="服务介绍"
                android:textColor="@color/color_6"
                android:textSize="@dimen/y34" />

            <TextView
                android:id="@+id/activity_service_project_detail2_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginTop="@dimen/x26"
                android:text="服务详细"
                android:textColor="@color/color_6"
                android:textSize="@dimen/y28" />

        </LinearLayout>
    </ScrollView>

    <View
        android:layout_width="@dimen/x1"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x80"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/activity_service_project_detail2_chat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_fb202b"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x10"
                android:layout_marginTop="@dimen/x10"
                android:drawableLeft="@mipmap/chat"
                android:drawablePadding="@dimen/x10"
                android:gravity="center"
                android:text="在线聊天"
                android:textColor="@color/color_f"
                android:textSize="@dimen/y30" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_service_project_detail2_reservation"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_66baf"
            android:gravity="center">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/documen"
                android:drawablePadding="@dimen/x10"
                android:gravity="center"
                android:text="在线预约"
                android:textColor="@color/color_f"
                android:textSize="@dimen/y30" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_service_project_detail2_phone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_15b521"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/call_phone"
                android:drawablePadding="@dimen/x10"
                android:gravity="center"
                android:text="电话联系"
                android:textColor="@color/color_f"
                android:textSize="@dimen/y30" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
