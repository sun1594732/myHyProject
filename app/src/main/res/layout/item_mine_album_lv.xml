<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_f"
    android:orientation="horizontal"
    android:paddingTop="@dimen/x10">


    <CheckBox
        android:id="@+id/item_mine_album_cb"
        android:layout_width="wrap_content"
        android:layout_margin="@dimen/x6"
        android:layout_height="match_parent"
        style="@style/ProjectCheckboxTheme"
        android:visibility="gone"/>
    <LinearLayout
        android:layout_width="@dimen/x124"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_mine_album_lv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="@dimen/x32"
            android:text="31"
            android:textColor="@color/color_0"
            android:textSize="@dimen/y34" />

        <View
            android:id="@+id/item_mine_album_lv_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginBottom="@dimen/x6"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginTop="@dimen/x6"
            android:background="@color/color_d2c" />

        <TextView
            android:id="@+id/item_mine_album_lv_month"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x18"
            android:gravity="right"
            android:paddingLeft="@dimen/x30"
            android:text="12月"
            android:textColor="@color/color_6"
            android:textSize="@dimen/y26" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/x6">

        <TextView
            android:id="@+id/item_mine_album_lv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/x10"
            android:layout_marginTop="@dimen/x14"
            android:gravity="top"
            android:text="固定字数为15的标题"
            android:textColor="@color/color_0"
            android:textSize="@dimen/y26" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/item_mine_album_lv_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x10" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/item_mine_album_lv_recycler_onePic"
                android:layout_width="@dimen/x130"
                android:layout_height="@dimen/x130"
                android:layout_marginBottom="@dimen/x10" />

            <TextView
                android:id="@+id/item_mine_album_lv_totalCount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x20"
                android:gravity="bottom"
                android:text="共 18 张"
                android:textColor="@color/color_6"
                android:textSize="@dimen/y26" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/x1"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/item_mine_album_del"
                android:layout_width="wrap_content"
                android:layout_gravity="bottom"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x30"
                android:layout_marginTop="@dimen/x10"
                android:background="@drawable/shape_d"
                android:paddingBottom="@dimen/x5"
                android:paddingLeft="@dimen/x10"
                android:paddingRight="@dimen/x10"
                android:paddingTop="@dimen/x5"
                android:text="删除"
                android:textColor="@color/color_3"
                android:textSize="@dimen/y26" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>