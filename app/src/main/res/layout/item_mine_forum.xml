<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/x10"
    android:layout_marginRight="@dimen/x10"
    android:background="@android:color/white"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/item_card_top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x78"
        android:background="@mipmap/item_card_center"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_fragment_interest_replace_icon"
            android:layout_width="@dimen/x46"
            android:layout_height="@dimen/x46"
            android:layout_marginLeft="@dimen/x18"
            android:src="@mipmap/ic_launcher"
            android:scaleType="centerCrop"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_forum_notification"
            android:visibility="invisible"
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20"
            android:src="@color/color_ef1111"
            android:layout_gravity="top"
            android:layout_marginTop="@dimen/x10"
            android:layout_marginLeft="-10px"/>

        <TextView
            android:id="@+id/item_fragment_interest_replace_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x18"
            android:text="多啦A小梦"
            android:textColor="@color/color_3"
            android:textSize="@dimen/y30" />

        <TextView
            android:id="@+id/item_fragment_interest_replace_gender"
            android:layout_width="@dimen/x52"
            android:layout_height="@dimen/x25"
            android:layout_marginLeft="@dimen/x16"
            android:background="@drawable/shape_1ccd9b_6_soild"
            android:drawableLeft="@mipmap/man"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/x6"
            android:drawablePadding="@dimen/x4"
            android:textSize="@dimen/y20"
            android:text="男" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />


        <TextView
            android:id="@+id/item_fragment_interest_replace_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="18px"
            android:paddingTop="@dimen/x10"

            android:text="花园小区"
            android:textColor="@color/color_9"
            android:textSize="@dimen/y26" />
        <TextView
            android:id="@+id/item_fragment_interest_replace_community"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="18px"
            android:paddingTop="@dimen/x10"
            android:text="兴趣"

            android:textColor="#1ccd9b"
            android:textSize="@dimen/y26" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/item_card_special" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/item_card_center"
        android:orientation="horizontal"
        android:paddingTop="@dimen/x8">

        <ImageView
            android:id="@+id/item_fragment_interest_replace_pic1"
            android:layout_width="@dimen/x150"
            android:layout_height="@dimen/x116"
            android:layout_marginBottom="@dimen/x10"
            android:layout_marginLeft="@dimen/x18"
            android:layout_marginTop="@dimen/x10"
            android:src="@mipmap/ic_launcher"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/item_fragment_interest_replace_pic2"
            android:layout_width="@dimen/x150"
            android:layout_height="@dimen/x116"
            android:layout_marginBottom="@dimen/x10"
            android:layout_marginLeft="@dimen/x20"
            android:scaleType="centerCrop"
            android:layout_marginTop="@dimen/x10"
            android:src="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/item_fragment_interest_replace_pic3"
            android:layout_width="@dimen/x150"
            android:layout_height="@dimen/x116"
            android:layout_marginBottom="@dimen/x10"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginTop="@dimen/x10"
            android:src="@mipmap/ic_launcher"
            android:scaleType="centerCrop"/>

        <ImageView
            android:id="@+id/item_fragment_interest_replace_pic4"
            android:layout_width="@dimen/x150"
            android:layout_height="@dimen/x116"
            android:layout_marginBottom="@dimen/x10"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginTop="@dimen/x10"
            android:src="@mipmap/ic_launcher"
            android:scaleType="centerCrop"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/item_card_center"
        android:orientation="vertical"
        android:paddingLeft="@dimen/x18"
        android:paddingTop="@dimen/x10">

        <TextView
            android:id="@+id/item_fragment_interest_replace_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:text="周庄，景点可商量，住宿可分摊，吃饭可一起。求约"
            android:textColor="@color/color_3"
            android:textSize="@dimen/y26" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x60">

            <TextView
                android:id="@+id/item_fragment_interest_replace_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginTop="@dimen/x10"
                android:text="10分钟前"
                android:textColor="@color/color_9"
                android:textSize="@dimen/y26" />

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/item_fragment_interest_replace_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x18"
                android:layout_marginTop="@dimen/x10"
                android:drawableLeft="@mipmap/dianzan"
                android:drawablePadding="@dimen/x5"
                android:gravity="bottom"
                android:text="100"
                android:textColor="@color/color_9"
                android:textSize="@dimen/y26" />

            <TextView
                android:id="@+id/item_fragment_interest_replace_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x18"
                android:layout_marginTop="@dimen/x10"
                android:drawableLeft="@mipmap/pinglun"
                android:drawablePadding="@dimen/x5"
                android:text="100"
                android:textColor="@color/color_9"
                android:textSize="@dimen/y26" />
            <TextView
                android:id="@+id/item_mine_forum_del"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x30"
                android:layout_marginTop="@dimen/x10"
                android:background="@drawable/shape_d"
                android:paddingBottom="@dimen/x5"
                android:paddingLeft="@dimen/x10"
                android:paddingRight="@dimen/x10"
                android:paddingTop="@dimen/x5"
                android:text="删除"
                android:textColor="@color/color_3"
                android:textSize="@dimen/y26" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/item_card_bottom" />

</LinearLayout>
