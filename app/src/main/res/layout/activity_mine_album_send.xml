<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_mine_album_send"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4"
    android:orientation="vertical"
    tools:context="com.hyzs.onekeyhelp.mine.activity.MineAlbumSendActivity">

    <include layout="@layout/toolbar" />

    <EditText
        android:id="@+id/activity_life_help_publish_edit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x120"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:layout_marginTop="@dimen/x20"
        android:background="@android:color/white"
        android:gravity="top"
        android:hint="说说此时的心情吧！"
        android:padding="@dimen/x20"
        android:textColor="@color/color_6"
        android:textColorHint="@color/color_6"
        android:textSize="@dimen/y26" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/x20"
        android:background="@android:color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/activity_life_help_publish_nonePic"
            android:layout_width="@dimen/x118"
            android:layout_height="@dimen/x118"

            android:layout_margin="@dimen/x10"
            android:background="@drawable/stoken_photo"
            android:src="@mipmap/default_photo" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/activity_life_help_publish_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x100"
        android:background="@android:color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/select_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x30"
            android:layout_marginTop="@dimen/x30"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/x30"
                android:layout_height="@dimen/x20"
                android:layout_gravity="center"
                android:background="@mipmap/yanjing"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x10"
                android:text="谁可以看"
                android:textColor="@android:color/black" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"

                >

                <TextView
                    android:id="@+id/album_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="所有人"
                    android:textColor="@android:color/black" />

            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"

            android:layout_height="2px"
            android:layout_marginTop="@dimen/x20"
            android:background="#f4f4f4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x30"
            android:layout_marginTop="@dimen/x30"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/youjiantou"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提醒谁看"
                android:textColor="@android:color/black" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="所有人"
                    android:textColor="@android:color/black"
                    android:visibility="gone" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
</LinearLayout>
