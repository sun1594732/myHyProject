<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/rl_reset1"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/color_f">

        <ImageView
            android:id="@+id/iv_reset_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="13dp"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/zhong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="重置密码"
            android:textColor="@color/color_3"
            android:textSize="16sp" />
    </RelativeLayout>

    <View
        android:id="@+id/view_reset_line1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x20"
        android:layout_below="@id/rl_reset1"
        android:background="@color/color_f4" />

    <LinearLayout
        android:id="@+id/re1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/view_reset_line1"
        android:background="@color/color_f">

        <ImageView
            android:id="@+id/img"
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="22dp"
            android:src="@drawable/login_phone" />

        <EditText
            android:id="@+id/activity_forget_phone_edit"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:layout_toRightOf="@id/img"
            android:background="@null"
            android:gravity="center|left"
            android:hint="手机号"
            android:inputType="phone"
            android:lines="1"
            android:singleLine="true"
            android:textColor="#000"
            android:textColorHint="#999" />
    </LinearLayout>

    <View
        android:id="@+id/view_reset_line2"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@id/re1"
        android:background="#eeeeee" />

    <LinearLayout
        android:id="@+id/re2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/view_reset_line2"
        android:background="@color/color_f">

        <ImageView
            android:id="@+id/img2"
            android:layout_width="18dp"
            android:layout_height="22dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="21dp"
            android:src="@drawable/login_lock" />

        <EditText
            android:id="@+id/activity_forget_pwd_edit"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:layout_toRightOf="@id/img"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center|left"
            android:hint="请输入新密码"
            android:inputType="textPassword"
            android:lines="1"
            android:maxEms="4"
            android:singleLine="true"
            android:textColor="#000"
            android:textColorHint="#999" />
    </LinearLayout>

    <View
        android:id="@+id/view_reset_line3"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/re2"
        android:background="#eeeeee" />

    <LinearLayout
        android:id="@+id/re3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/view_reset_line3"
        android:background="@color/color_f">

        <ImageView
            android:id="@+id/img3"
            android:layout_width="18dp"
            android:layout_height="22dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="21dp"
            android:src="@drawable/login_lock" />

        <EditText
            android:id="@+id/activity_forget_pwd_again_edit"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:layout_toRightOf="@id/img"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center|left"
            android:hint="请重新输入新密码"
            android:inputType="textPassword"
            android:lines="1"
            android:singleLine="true"
            android:textColor="#000"
            android:textColorHint="#999" />
    </LinearLayout>

    <View
        android:id="@+id/view_reset_line4"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@id/re3"
        android:background="#EEEEEE" />


    <LinearLayout
        android:id="@+id/re4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/view_reset_line4"
        android:background="@color/color_f">

        <ImageView
            android:id="@+id/img9"
            android:layout_width="18dp"
            android:layout_height="22dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="21dp" />

        <EditText
            android:id="@+id/activity_forget_code_edit"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:layout_toRightOf="@id/img"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center|left"
            android:hint="请输入验证码"
            android:inputType="phone"
            android:lines="1"
            android:maxEms="4"
            android:singleLine="true"
            android:textColor="#000"
            android:textColorHint="#999" />

        <TextView
            android:id="@+id/activity_forget_getCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="#12CC8E"
            android:ems="5"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:paddingTop="5dp"
            android:text="获取验证码"
            android:textColor="@color/color_f"
            android:textSize="@dimen/x26" />
    </LinearLayout>

    <Button
        android:id="@+id/activity_forget_submit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/re4"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:background="#12CC8E"
        android:gravity="center"
        android:text="提交"
        android:textColor="#FFF"
        android:textSize="@dimen/x34" />

    <TextView
        android:id="@+id/tv_reset_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/activity_forget_submit"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:text="客服电话:400-628-7198"
        android:textColor="#1ccd9b"
        android:textSize="13dp" />

</RelativeLayout>