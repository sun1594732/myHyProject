<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/pop_layout"
              android:layout_width="match_parent"
              android:layout_height="@dimen/x460"
              android:orientation="vertical">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="@dimen/x90"
		android:background="@color/color_f">


		<ImageView
			android:id="@+id/iv_mode_back"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:padding="@dimen/x24"
			android:src="@drawable/back"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:text="选择付款方式"
			android:textColor="@color/color_0"
			android:textSize="@dimen/y30"/>

	</RelativeLayout>

	<View
		android:layout_width="match_parent"
		android:layout_height="@dimen/x2"
		android:background="@color/color_d2c"/>

	<RelativeLayout
		android:id="@+id/rl_mode_zhifubao"
		android:layout_width="match_parent"
		android:layout_height="@dimen/x110"
		android:background="@color/color_f">

		<ImageView
			android:id="@+id/iv_mode_item_icon"
			android:layout_width="@dimen/x90"
			android:layout_height="@dimen/x90"
			android:layout_centerVertical="true"
			android:layout_marginLeft="@dimen/x30"
			android:src="@drawable/zhifubao_logo"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="@dimen/x16"
			android:layout_marginTop="@dimen/x16"
			android:layout_toRightOf="@id/iv_mode_item_icon"
			android:text="支付宝"
			android:textColor="@color/color_0"
			android:textSize="@dimen/y30"/>

		<TextView
			android:id="@+id/tv_rec_mode_info"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:layout_marginBottom="@dimen/x16"
			android:layout_marginLeft="@dimen/x16"
			android:layout_toRightOf="@id/iv_mode_item_icon"
			android:text="数亿用户都在用，安全可托付"
			android:textColor="@color/color_6"
			android:textSize="@dimen/y26"/>

		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:layout_marginRight="@dimen/x20"
			android:src="@mipmap/youjiantou"/>

	</RelativeLayout>

	<View
		android:layout_width="match_parent"
		android:layout_height="@dimen/x1"
		android:background="@color/color_d2c"/>

	<RelativeLayout
		android:id="@+id/rl_mode_weixin"
		android:layout_width="match_parent"
		android:layout_height="@dimen/x110"
		android:background="@color/color_f">

		<ImageView
			android:id="@+id/iv_mode_item_weixin"
			android:layout_width="@dimen/x90"
			android:layout_height="@dimen/x90"
			android:layout_centerVertical="true"
			android:layout_marginLeft="@dimen/x30"
			android:src="@drawable/weixin_logo"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="@dimen/x16"
			android:layout_marginTop="@dimen/x16"
			android:layout_toRightOf="@id/iv_mode_item_weixin"
			android:text="微信支付"
			android:textColor="@color/color_0"
			android:textSize="@dimen/y30"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:layout_marginBottom="@dimen/x16"
			android:layout_marginLeft="@dimen/x16"
			android:layout_toRightOf="@id/iv_mode_item_weixin"
			android:text="亿万用户的选择，更快更安全"
			android:textColor="@color/color_6"
			android:textSize="@dimen/y26"/>

		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:layout_marginRight="@dimen/x20"
			android:src="@mipmap/youjiantou"/>
	</RelativeLayout>

	<View
		android:layout_width="match_parent"
		android:layout_height="@dimen/x1"
		android:background="@color/color_d2c"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="@dimen/x320"
		android:background="@color/color_f">

	</LinearLayout>


</LinearLayout>