<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <ScrollView
        android:id="@+id/ScrollView_relative"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/activity_mine_album_bg"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x250"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/beauty"
                    android:visibility="gone" />

                <com.hyzs.onekeyhelp.widget.RoundImageView
                    android:id="@+id/activity_mine_album_icon"
                    android:layout_width="@dimen/x150"
                    android:layout_height="@dimen/x140"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/x30"
                    android:background="@drawable/border_4_4_10"
                    android:padding="@dimen/x4"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/activity_mine_album_icon"
                    android:layout_marginLeft="@dimen/x20"
                    android:layout_marginStart="@dimen/x20"
                    android:layout_marginTop="@dimen/x8"
                    android:layout_toEndOf="@+id/activity_mine_album_icon"
                    android:layout_toRightOf="@+id/activity_mine_album_icon"
                    android:text="自定义名称"
                    android:textColor="@color/color_f"
                    android:textSize="@dimen/y34"
                    android:visibility="invisible" />

                <ImageView
                    android:layout_width="@dimen/x20"
                    android:layout_height="@dimen/x25"
                    android:layout_below="@+id/activity_mine_album_bg"
                    android:layout_marginLeft="@dimen/x130"
                    android:layout_marginTop="@dimen/x15"
                    android:layout_toRightOf="@+id/activity_mine_album_icon"
                    android:background="@mipmap/jvliweizhi"
                    android:visibility="gone" />

                <!--<TextView-->
                    <!--android:id="@+id/activity_mine_album_sign"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_alignLeft="@+id/activity_mine_album_name"-->
                    <!--android:layout_alignStart="@+id/activity_mine_album_name"-->
                    <!--android:layout_below="@+id/activity_mine_album_bg"-->
                    <!--android:layout_marginLeft="@dimen/x140"-->
                    <!--android:layout_marginTop="@dimen/x14"-->
                    <!--android:text="距离200m"-->
                    <!--android:textColor="@color/color_3"-->
                    <!--android:textSize="@dimen/y26"-->
                    <!--android:visibility="gone" />-->

            </RelativeLayout>


            <TextView
                android:id="@+id/activity_mine_album_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x10"
                android:gravity="center"
                android:text="王者荣耀救援大队"
                android:textColor="#333"
                android:textSize="@dimen/y30" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/x25"
                android:layout_marginTop="@dimen/x10"
                android:src="@mipmap/alltimel" />


            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginTop="@dimen/x20"
                android:background="#f4f4f4" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x155"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="@dimen/x240"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/x50"
                        android:layout_height="@dimen/x50"
                        android:layout_marginTop="@dimen/x10"
                        android:background="@mipmap/xinzang" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x10"
                        android:text="救援次数"
                        android:textColor="#666" />

                    <TextView
                        android:id="@+id/activity_mine_album_sum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/x20"
                        android:text="999"
                        android:textColor="#ef1111"
                        android:textSize="@dimen/y26" />

                </LinearLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="@dimen/x100"
                    android:layout_gravity="center"
                    android:background="#dddddd" />

                <LinearLayout
                    android:layout_width="@dimen/x240"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/x50"
                        android:layout_height="@dimen/x50"
                        android:layout_marginTop="@dimen/x10"
                        android:background="@mipmap/guanzhu" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x10"
                        android:text="已关注"
                        android:textColor="#666" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/x20"
                        android:text="999"
                        android:textColor="#ef1111"
                        android:textSize="@dimen/y26" />

                </LinearLayout>

                <View
                    android:layout_width="1px"
                    android:layout_height="@dimen/x100"
                    android:layout_gravity="center"
                    android:background="#dddddd" />

                <LinearLayout
                    android:layout_width="@dimen/x240"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/x50"
                        android:layout_height="@dimen/x50"
                        android:layout_marginTop="@dimen/x10"
                        android:background="@mipmap/haoping" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x10"
                        android:text="累计好评"
                        android:textColor="#666" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/x20"
                        android:text="999"
                        android:textColor="#ef1111"
                        android:textSize="@dimen/y26" />

                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#dddddd" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x70"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x30"
                    android:drawableLeft="@mipmap/dianhua"
                    android:drawablePadding="@dimen/x20"
                    android:text="联系方式"
                    android:textColor="@color/color_3"
                    android:textSize="@dimen/y26" />

                <View
                    android:layout_width="@dimen/x1"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/x20"
                    android:background="@color/color_f4" />

                <TextView
                    android:id="@+id/activity_mine_home_tv_phone_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x20"
                    android:text="010-666666"
                    android:textColor="@color/color_3"
                    android:textSize="@dimen/y26" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginLeft="@dimen/x180"
                android:background="@color/color_f4" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x70"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x30"
                    android:drawableLeft="@mipmap/sheqv"
                    android:drawablePadding="@dimen/x20"
                    android:text="机构地址"
                    android:textColor="@color/color_3"
                    android:textSize="@dimen/y26" />

                <View
                    android:layout_width="@dimen/x1"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/x20"
                    android:background="@color/color_f4" />

                <TextView
                    android:id="@+id/activity_mine_home_tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x20"
                    android:text="北京市朝阳区朝阳里高碑店..."
                    android:textColor="@color/color_3"
                    android:textSize="@dimen/y26" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginLeft="@dimen/x180"
                android:background="@color/color_f4" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x70"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x30"
                    android:drawableLeft="@mipmap/jiuyuanlingyu"
                    android:drawablePadding="@dimen/x20"
                    android:text="救援项目"
                    android:textColor="@color/color_3"
                    android:textSize="@dimen/y26" />

                <View
                    android:layout_width="@dimen/x1"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/x20"
                    android:background="@color/color_f4" />

                <TextView
                    android:id="@+id/activity_mine_home_ll_scope"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x20"
                    android:text="北京市朝阳区朝阳里高碑店..."
                    android:textColor="@color/color_3"
                    android:textSize="@dimen/y26" />
                <!--<GridView-->
                <!--android:id="@+id/activity_mine_home_ll_scope"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_gravity="center_vertical"-->
                <!--android:layout_marginLeft="@dimen/x20"-->
                <!--android:textSize="@dimen/y26" />-->

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginLeft="@dimen/x180"
                android:background="@color/color_f4" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x70"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x30"
                    android:drawableLeft="@mipmap/sheqv"
                    android:drawablePadding="@dimen/x20"
                    android:text="救援范围"
                    android:textColor="@color/color_3"
                    android:textSize="@dimen/y26" />

                <View
                    android:layout_width="@dimen/x1"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/x20"
                    android:background="@color/color_f4" />

                <TextView
                    android:id="@+id/activity_mine_home_tv_region"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x20"
                    android:text="北京市-北京市-全部"
                    android:textColor="@color/color_3"
                    android:textSize="@dimen/y26" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginLeft="@dimen/x180"
                android:background="@color/color_f4" />

            <TextView
                android:id="@+id/activity_mine_home_tv_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/x30"
                android:textColor="@color/color_3"
                android:textSize="@dimen/y26" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x30"
                    android:layout_marginTop="@dimen/x20"
                    android:drawableLeft="@mipmap/jiuyuanshijian"
                    android:drawablePadding="@dimen/x20"
                    android:text="最近救援"
                    android:textColor="@color/color_3"
                    android:textSize="@dimen/y26" />

                <View
                    android:layout_width="@dimen/x1"
                    android:layout_height="@dimen/x30"
                    android:layout_margin="@dimen/x20"
                    android:background="@color/color_f4" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.hyzs.onekeyhelp.widget.ListViewForScrollView
                        android:id="@+id/lv_help"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"></com.hyzs.onekeyhelp.widget.ListViewForScrollView>

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x80"
        android:layout_alignParentBottom="true"
        android:background="#1ccd9b"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/activity_mine_album_call_phone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="通话"
            android:textColor="@android:color/white"
            android:textSize="@dimen/y30" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#f4f4f4" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="聊天"
            android:textColor="@android:color/white"
            android:textSize="@dimen/y30"

            android:visibility="gone" />
    </LinearLayout>
</RelativeLayout>