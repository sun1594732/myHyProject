<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/x568"
    android:layout_height="@dimen/x348"
    android:background="@drawable/longkick_pop_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/remove_family"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x74"
        android:layout_marginLeft="@dimen/x54"
        android:gravity="center_vertical"
        android:text="家人"
        android:textColor="@color/color_3"
        android:textSize="@dimen/y26" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_marginLeft="@dimen/x42"
        android:layout_marginRight="@dimen/x15"
        android:background="@color/color_d2c" />

    <TextView
        android:id="@+id/remove_frient"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x74"
        android:layout_marginLeft="@dimen/x54"
        android:gravity="center_vertical"
        android:text="朋友"
        android:textColor="@color/color_3"
        android:textSize="@dimen/y26" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_marginLeft="@dimen/x42"
        android:layout_marginRight="@dimen/x15"
        android:background="@color/color_d2c" />

    <TextView
        android:id="@+id/remove_neighbor"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x74"
        android:layout_marginLeft="@dimen/x54"
        android:gravity="center_vertical"
        android:text="邻居"
        android:textColor="@color/color_3"
        android:textSize="@dimen/y26" />

</LinearLayout>