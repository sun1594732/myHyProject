<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:background="@color/color_f"
    android:layout_height="@dimen/x160">
    <com.hyzs.onekeyhelp.widget.RoundImageView
        android:scaleType="centerCrop"
        android:id="@+id/item_help_detail_icon"
        android:layout_width="@dimen/x100"
        android:layout_height="@dimen/x100"
        android:layout_margin="@dimen/x30"
        android:src="@mipmap/beauty" />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x30"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_help_detail_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="张女士"
                android:textColor="@color/color_3"
                android:textSize="@dimen/y30" />

            <ImageView
                android:id="@+id/item_help_detail_idendity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x10"
                android:src="@mipmap/identity" />

            <TextView
                android:id="@+id/item_help_detail_zheng"
                android:layout_width="@dimen/x30"
                android:layout_height="@dimen/x30"
                android:layout_marginLeft="@dimen/x10"
                android:background="@drawable/shape_f81302_zheng"
                android:paddingBottom="@dimen/x2"
                android:paddingLeft="@dimen/x6"
                android:paddingRight="@dimen/x6"
                android:paddingTop="@dimen/x2"
                android:text="证"
                android:textColor="@color/color_f"
                android:textSize="@dimen/y20"
                android:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/color_3"
                android:textSize="@dimen/y26"
                android:text="以帮助"
                android:visibility="gone"
                android:id="@+id/item_help_detail_isHelp"
                android:layout_marginLeft="@dimen/x36"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x8"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/item_help_detail_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017-3-20 20:00"
                android:textColor="@color/color_3"
                android:textSize="@dimen/y26" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/x10"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/item_help_detail_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="等待确认"
                android:textColor="@color/color_3"
                android:textSize="@dimen/y26" />
        </LinearLayout>
    </LinearLayout>


    <ImageView
        android:id="@+id/item_help_detail_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/x10"
        android:src="@mipmap/xiangqingye_liaoitan" />

    <ImageView
        android:id="@+id/item_help_detail_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x30"
        android:src="@mipmap/xiangqingye_tonghua" />
</LinearLayout>