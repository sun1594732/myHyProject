<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_f"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="@dimen/x120"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.hyzs.onekeyhelp.widget.RoundImageView
            android:id="@+id/item_home_circle_icon"
            android:layout_width="@dimen/x120"
            android:layout_height="@dimen/x120"
            android:layout_marginTop="@dimen/x30"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_replace" />

        <TextView
            android:id="@+id/item_home_circle_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x8"
            android:text="白富美"
            android:textColor="@color/color_3"
            android:textSize="@dimen/y30" />

        <ImageView
            android:id="@+id/item_home_circle_identity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x10"
            android:src="@mipmap/identity" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_home_circle_title"
            style="@style/y34text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x26"
            android:ellipsize="end"
            android:layout_marginRight="@dimen/x8"
            android:lineSpacingMultiplier="1.3"
            android:maxLines="2"
            android:text=""
            android:textColor="@color/color_3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.hyzs.onekeyhelp.widget.RoundImageView
                android:id="@+id/item_home_circle_pic1"
                android:layout_width="@dimen/x120"
                android:layout_height="@dimen/x120"
                android:layout_marginBottom="@dimen/x10"
                android:layout_marginTop="@dimen/x10"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher" />

            <com.hyzs.onekeyhelp.widget.RoundImageView
                android:id="@+id/item_home_circle_pic2"
                android:layout_width="@dimen/x120"
                android:layout_height="@dimen/x120"
                android:layout_marginBottom="@dimen/x10"
                android:layout_marginLeft="@dimen/x15"
                android:layout_marginTop="@dimen/x10"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher" />

            <com.hyzs.onekeyhelp.widget.RoundImageView
                android:id="@+id/item_home_circle_pic3"
                android:layout_width="@dimen/x120"
                android:layout_height="@dimen/x120"
                android:layout_marginBottom="@dimen/x10"
                android:layout_marginLeft="@dimen/x15"
                android:layout_marginTop="@dimen/x10"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher" />

            <com.hyzs.onekeyhelp.widget.RoundImageView
                android:id="@+id/item_home_circle_pic4"
                android:layout_width="@dimen/x120"
                android:layout_height="@dimen/x120"
                android:layout_marginBottom="@dimen/x10"
                android:layout_marginLeft="@dimen/x15"
                android:layout_marginTop="@dimen/x10"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/x1"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x10"
            android:layout_marginBottom="@dimen/x20">

            <TextView
                android:id="@+id/item_home_circle_hotCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:drawableLeft="@mipmap/sy_renqi2"
                android:drawablePadding="@dimen/x10"
                android:gravity="center"
                android:text="人气 : 999"
                android:textColor="@color/color_6"
                android:textSize="@dimen/y26" />

            <TextView
                android:id="@+id/item_home_circle_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:drawableLeft="@mipmap/sy_quanzifenlei"
                android:drawablePadding="@dimen/x10"
                android:gravity="center"
                android:text="旅游"
                android:textColor="@color/color_6"
                android:textSize="@dimen/y26" />

            <TextView
                android:id="@+id/item_home_circle_praiseCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x30"
                android:drawableLeft="@mipmap/sy_dianzan"
                android:drawablePadding="@dimen/x10"
                android:gravity="bottom"
                android:text="999"
                android:textColor="@color/color_6"
                android:textSize="@dimen/y26" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>