<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x96"
    android:background="@color/color_1ccd9b">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/toolbar_left_circle_img"
        android:layout_width="@dimen/x60"
        android:layout_height="@dimen/x60"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/x28"
        android:src="@mipmap/icon_replace"
        android:visibility="gone" />

    <TextView
        android:id="@+id/toolbar_left_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:drawableLeft="@mipmap/denglu"
        android:drawablePadding="@dimen/x10"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/x30"
        android:text="登录"
        android:textColor="@color/color_f"
        android:textSize="@dimen/y34"
        android:visibility="gone" />

    <TextView
        android:id="@+id/toolbar_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:drawablePadding="@dimen/x6"
        android:text="@string/app_name"
        android:textColor="@color/color_f"
        android:textSize="@dimen/y34" />

    <TextView
        android:id="@+id/toolbar_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:paddingRight="@dimen/x30"
        android:text="上传"
        android:textColor="@color/color_f"
        android:textSize="@dimen/y30"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/toolbar_right_img"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:paddingLeft="@dimen/x30"
        android:paddingRight="@dimen/x30"
        android:src="@mipmap/toolbar_right"
        android:textColor="@color/color_f"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/toolbar_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingLeft="@dimen/x28"
        android:paddingRight="@dimen/x28"
        android:src="@mipmap/back" />
</RelativeLayout>