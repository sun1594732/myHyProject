<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_agency_service_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                android:id="@+id/activity_agency_service_detail_header"
                layout="@layout/item_agency_service_layout" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginRight="@dimen/x30"
                android:background="@color/color_d" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginTop="@dimen/x40"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/x6"
                    android:layout_height="@dimen/x35"
                    android:background="@color/color_1ccd9b" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x16"
                    android:text="注册信息"
                    android:textColor="@color/color_3"
                    android:textSize="@dimen/y34" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginRight="@dimen/x30"
                android:layout_marginTop="@dimen/x30"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="营业执照："
                    android:textColor="@color/color_3"
                    android:textSize="@dimen/y30" />

                <TextView
                    android:id="@+id/activity_agency_service_detail_business_license"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="123456789"
                    android:textColor="@color/color_3"
                    android:textSize="@dimen/y30" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginBottom="@dimen/x15"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginRight="@dimen/x30"
                android:layout_marginTop="@dimen/x15"
                android:background="@color/color_d" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginRight="@dimen/x30"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="成立日期："
                    android:textColor="@color/color_3"
                    android:textSize="@dimen/y30" />

                <TextView
                    android:id="@+id/activity_agency_service_detail_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2010年10月25日"
                    android:textColor="@color/color_3"
                    android:textSize="@dimen/y30" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginBottom="@dimen/x15"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginRight="@dimen/x30"
                android:layout_marginTop="@dimen/x15"
                android:background="@color/color_d" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginRight="@dimen/x30"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="服务范围："
                    android:textColor="@color/color_3"
                    android:textSize="@dimen/y30" />

                <TextView
                    android:id="@+id/activity_agency_service_detail_range"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="婴儿及老人护理、家政服务"
                    android:textColor="@color/color_3"
                    android:textSize="@dimen/y30" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginBottom="@dimen/x15"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginRight="@dimen/x30"
                android:layout_marginTop="@dimen/x15"
                android:background="@color/color_d" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginRight="@dimen/x30"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="服务区域："
                    android:textColor="@color/color_3"
                    android:textSize="@dimen/y30" />

                <TextView
                    android:id="@+id/activity_agency_service_detail_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="中关村、上地"
                    android:textColor="@color/color_3"
                    android:textSize="@dimen/y30" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginBottom="@dimen/x15"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginRight="@dimen/x30"
                android:layout_marginTop="@dimen/x15"
                android:background="@color/color_d" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginTop="@dimen/x30"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/x6"
                    android:layout_height="@dimen/x35"
                    android:background="@color/color_1ccd9b" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x16"
                    android:layout_weight="1"
                    android:text="机构照片"
                    android:textColor="@color/color_3"
                    android:textSize="@dimen/y34" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x208"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/activity_agency_service_horizontal_left"
                    android:layout_width="@dimen/x40"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/x30"
                    android:scaleType="centerInside"
                    android:src="@mipmap/yuan_91" />

                <android.support.v4.view.ViewPager
                    android:id="@+id/activity_agency_service_horizontal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" />

                <ImageView
                    android:id="@+id/activity_agency_service_horizontal_right"
                    android:layout_width="@dimen/x40"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/x30"
                    android:src="@mipmap/yuan" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginTop="@dimen/x30"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/x6"
                    android:layout_height="@dimen/x35"
                    android:background="@color/color_1ccd9b" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x16"
                    android:layout_weight="1"
                    android:text="服务项目"
                    android:textColor="@color/color_3"
                    android:textSize="@dimen/y34" />

                <TextView
                    android:id="@+id/activity_agency_service_detail_project_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/x30"
                    android:drawablePadding="@dimen/x10"
                    android:drawableRight="@mipmap/more"
                    android:text="查看更多"
                    android:textColor="@color/color_1ccd9b"
                    android:textSize="@dimen/y30" />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/activity_agency_service_detail_project_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginRight="@dimen/x30"
                android:layout_marginTop="@dimen/x20"
                android:visibility="gone">

            </android.support.v7.widget.RecyclerView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginTop="@dimen/x30"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/x6"
                    android:layout_height="@dimen/x35"
                    android:background="@color/color_1ccd9b" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x16"
                    android:layout_weight="1"
                    android:text="用户评价"
                    android:textColor="@color/color_3"
                    android:textSize="@dimen/y34" />

                <TextView
                    android:id="@+id/activity_agency_service_detail_comment_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/x30"
                    android:drawablePadding="@dimen/x10"
                    android:drawableRight="@mipmap/more"
                    android:text="查看更多"
                    android:textColor="@color/color_1ccd9b"
                    android:textSize="@dimen/y30" />
            </LinearLayout>

            <com.hyzs.onekeyhelp.widget.ListViewForScrollView
                android:id="@+id/activity_agency_service_detail_comment_listview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:divider="@color/color_d"
                android:dividerHeight="@dimen/x1">

            </com.hyzs.onekeyhelp.widget.ListViewForScrollView>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x80"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/activity_agency_service_detail_chat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_fb202b"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x10"
                android:layout_marginTop="@dimen/x10"
                android:drawableLeft="@mipmap/chat"
                android:drawablePadding="@dimen/x10"
                android:gravity="center"
                android:text="在线聊天"
                android:textColor="@color/color_f"
                android:textSize="@dimen/y30" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_agency_service_detail_reservation"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_66baf"
            android:gravity="center">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/documen"
                android:drawablePadding="@dimen/x10"
                android:gravity="center"
                android:text="在线预约"
                android:textColor="@color/color_f"
                android:textSize="@dimen/y30" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_agency_service_detail_call_phone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_15b521"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/call_phone"
                android:drawablePadding="@dimen/x10"
                android:gravity="center"
                android:text="电话联系"
                android:textColor="@color/color_f"
                android:textSize="@dimen/y30" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>