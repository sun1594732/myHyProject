<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="@dimen/x500"
    android:background="@drawable/longkick_pop_bg"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/dialog_confirm_title"
        android:layout_width="@dimen/x500"
        android:text="是否删除该好友"
        android:gravity="center"
        android:paddingTop="@dimen/x30"
        android:paddingBottom="@dimen/x30"
        android:textSize="@dimen/y30"
        android:textColor="@color/color_3"
        android:layout_height="wrap_content" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x2"
        android:background="@color/color_9"/>
    <LinearLayout
        android:layout_width="@dimen/x500"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/dialog_confirm_left"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/color_3"
            android:textSize="@dimen/y30"
            android:text="确认"
            android:padding="@dimen/x20"
            android:gravity="center"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="@dimen/x2"
            android:layout_height="match_parent"
            android:background="@color/color_9" />
        <TextView
            android:id="@+id/dialog_confirm_right"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/color_3"
            android:textSize="@dimen/y30"
            android:text="取消"
            android:padding="@dimen/x20"
            android:gravity="center"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>