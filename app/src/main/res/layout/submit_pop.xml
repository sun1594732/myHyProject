<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/x456"
        android:background="@drawable/shape_pop_f"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_height="@dimen/x604">

        <View
            android:layout_width="@dimen/x1"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/tree" />

        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/y36"
            android:text="感谢您的宝贵反馈"
            android:textColor="@color/color_3"
            android:layout_marginTop="@dimen/x80"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/color_9"
            android:textSize="@dimen/y30"
            android:text="您的建议已被我们收藏~"
            android:layout_marginBottom="@dimen/x130"
            android:layout_marginTop="@dimen/x68"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>