<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_housekeeping_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:id="@+id/activity_family_list_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x88"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/activity_housekeeping_layout_left"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="机构服务"
                android:textColor="@color/color_3"
                android:textSize="@dimen/y34" />

            <TextView
                android:id="@+id/activity_housekeeping_layout_right"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="个人服务"
                android:textColor="@color/color_3"
                android:textSize="@dimen/y34" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x4"
            android:background="@color/color_d"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:id="@+id/scroll_line"
                android:layout_width="@dimen/x360"
                android:layout_height="match_parent"
                android:background="@color/color_1ccd9b" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.hyzs.onekeyhelp.widget.CanBanScrollViewPager xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/activity_housekeeping_layout_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:isScroll="true" />

        <ImageView
            android:id="@+id/activity_housekeeping_layout_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/x66"
            android:layout_marginRight="@dimen/x66"
            android:src="@mipmap/fangda" />
    </RelativeLayout>
</LinearLayout>